@using GolbonWebRoad.Application.Dtos;
@using GolbonWebRoad.Application.Dtos.Products
@model ProductDto
@{
    ViewData["Title"] = Model.Name;
}

<div class="container mx-auto px-4 py-12 md:py-20">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-start">

        <div class="sticky top-24">
            <div class="border border-gray-200 rounded-xl bg-white shadow-lg overflow-hidden">
                <img src="@(string.IsNullOrEmpty(Model.ImageUrl) ? "https://placehold.co/800x600/EEE/31343C?text=Aura" : Model.ImageUrl)"
                     alt="@Model.Name"
                     class="w-full h-auto object-cover">
            </div>
        </div>

        <div class="space-y-6">
            <h1 class="text-3xl md:text-4xl font-bold text-gray-900">@Model.Name</h1>

            <p class="text-4xl font-light text-indigo-700">@Model.Price.ToString("N0") <span class="text-2xl">تومان</span></p>

            <p class="text-gray-600 leading-relaxed text-lg">
                اینجا یک توضیح کوتاه و جذاب از محصول قرار می‌گیرد که مشتری را به خرید ترغیب می‌کند. ویژگی‌های کلیدی و مزایای اصلی محصول را برجسته کنید.
            </p>

            <form asp-controller="Cart" asp-action="AddToCart" method="post" class="pt-4">
                <input type="hidden" name="id" value="@Model.Id" />
                <div class="flex flex-col sm:flex-row gap-4">
                    <div class="flex items-center border rounded-lg h-14">
                        <button type="button" class="w-14 h-full text-2xl text-gray-500 hover:bg-gray-100 transition rounded-r-lg">-</button>
                        <input type="number" name="quantity" value="1" class="w-16 h-full text-center text-lg font-semibold border-l border-r outline-none" />
                        <button type="button" class="w-14 h-full text-2xl text-gray-500 hover:bg-gray-100 transition rounded-l-lg">+</button>
                    </div>
                    <button type="submit" class="flex-1 bg-indigo-600 text-white font-bold py-3 px-4 rounded-lg text-lg hover:bg-indigo-700 transition-all duration-300 shadow-md hover:shadow-lg">
                        افزودن به سبد خرید
                    </button>
                </div>
            </form>

            <div class="pt-6 border-t">
                <h3 class="font-semibold text-lg mb-4">مشخصات محصول:</h3>
                <div class="space-y-3 text-gray-600">
                    <div class="flex justify-between">
                        <span>شناسه محصول:</span>
                        <span class="font-mono">@Model.Id</span>
                    </div>
                    <div class="flex justify-between">
                        <span>دسته بندی:</span>
                        <span>(نام دسته بندی)</span>
                    </div>
                    <div class="flex justify-between">
                        <span>موجودی:</span>
                        <span class="text-green-600 font-semibold">موجود در انبار</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>