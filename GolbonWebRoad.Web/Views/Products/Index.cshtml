
@using GolbonWebRoad.Web.Models
@model ProductViewModel
@{
    ViewData["Title"] = "همه محصولات";
}

<div class="bg-gray-100 py-10 text-center">
    <div class="container mx-auto px-4">
        <h1 class="text-4xl font-bold text-gray-800">کاتالوگ محصولات</h1>
        <p class="text-gray-600 mt-2">محصول مورد نظر خود را در میان بهترین‌های ما پیدا کنید.</p>
    </div>
</div>

<div class="container mx-auto px-4 py-12">
    <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">

        <aside class="lg:col-span-1 bg-white p-6 rounded-xl shadow-md h-fit sticky top-24">
            <h3 class="text-xl font-bold mb-6 border-b pb-4">جستجو و فیلتر</h3>

            <form asp-controller="Products" asp-action="Index" method="get">
    <div class="mb-6">
        <label for="search" class="font-semibold block mb-2">نام محصول</label>
        <input type="text" name="searchTerm" value="@ViewData["CurrentFilter"]" placeholder="جستجو..." class="w-full p-2 border rounded-md ...">
    </div>

    <div class="mb-6">
    <label for="categoryId" class="font-semibold block mb-2">دسته‌بندی</label>
    <select name="categoryId" class="w-full p-2 border rounded-md ...">
        <option value="">همه دسته‌بندی‌ها</option>

        @foreach (var category in Model.Categories)
        {
            // بررسی می‌کنیم که آیا این کتگوری همان کتگوری انتخاب شده قبلی است یا نه
            bool isSelected = ViewData["CurrentCategory"] != null && (int)ViewData["CurrentCategory"] == category.Id;

            <option value="@category.Id" selected="@isSelected">@category.Name</option>
        }
    </select>
</div>

    <div class="mb-6">
        <label for="sortOrder" class="font-semibold block mb-2">مرتب‌سازی بر اساس</label>
        <select name="sortOrder" class="w-full p-2 border rounded-md ...">
            <option value="name">نام</option>
            <option value="price_asc">ارزان‌ترین</option>
            <option value="price_desc">گران‌ترین</option>
        </select>
    </div>

    <div class="mt-4">
        <button type="submit" class="w-full bg-indigo-600 ...">اعمال فیلتر</button>
    </div>
</form>
        </aside>

        <main class="lg:col-span-3">
            @if (Model.Products != null && Model.Products.Any())
            {
                <div class="grid grid-cols-1 sm:grid-cols-2 xl:grid-cols-3 gap-8">
                    @foreach (var product in Model.Products)
                    {
                        <div class="group border border-gray-200 rounded-lg overflow-hidden shadow-sm hover:shadow-xl transition-shadow duration-300 bg-white">
                            <a asp-controller="Products" asp-action="Detail" asp-route-id="@product.Id" class="block overflow-hidden bg-gray-100">
                                <img src="@(string.IsNullOrEmpty(product.ImageUrl) ? "https://placehold.co/600x400/EEE/31343C?text=Aura" : product.ImageUrl)"
                                     alt="@product.Name"
                                     class="w-full h-60 object-cover group-hover:scale-110 transition-transform duration-500" />
                            </a>
                            <div class="p-4">
                                <h3 class="text-lg font-semibold text-gray-800 truncate">
                                    <a asp-controller="Products" asp-action="Detail" asp-route-id="@product.Id" class="hover:text-indigo-600">@product.Name</a>
                                </h3>
                                <p class="text-gray-500 mt-1 text-sm">@product.Id</p>
                                <div class="flex justify-between items-center mt-4">
                                    <span class="text-xl font-bold text-indigo-700">@product.Price.ToString("N0") تومان</span>
                                    <a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@product.Id" class="bg-gray-100 text-gray-700 hover:bg-indigo-600 hover:text-white rounded-full p-2 transition-all duration-300">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" /></svg>
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <p class="text-center text-gray-500 col-span-full">محصولی یافت نشد.</p>
            }

            <nav class="mt-12 flex justify-center">
                <ul class="flex items-center -space-x-px h-10 text-base">
                    <li><a href="#" class="flex items-center justify-center px-4 h-10 ml-0 leading-tight text-gray-500 bg-white border border-gray-300 rounded-r-lg hover:bg-gray-100 hover:text-gray-700">قبلی</a></li>
                    <li><a href="#" class="flex items-center justify-center px-4 h-10 leading-tight text-gray-500 bg-white border border-gray-300 hover:bg-gray-100 hover:text-gray-700">1</a></li>
                    <li><a href="#" aria-current="page" class="z-10 flex items-center justify-center px-4 h-10 leading-tight text-indigo-600 border border-indigo-300 bg-indigo-50 hover:bg-indigo-100 hover:text-indigo-700">2</a></li>
                    <li><a href="#" class="flex items-center justify-center px-4 h-10 leading-tight text-gray-500 bg-white border border-gray-300 hover:bg-gray-100 hover:text-gray-700">3</a></li>
                    <li><a href="#" class="flex items-center justify-center px-4 h-10 leading-tight text-gray-500 bg-white border border-gray-300 rounded-l-lg hover:bg-gray-100 hover:text-gray-700">بعدی</a></li>
                </ul>
            </nav>
        </main>
    </div>
</div>