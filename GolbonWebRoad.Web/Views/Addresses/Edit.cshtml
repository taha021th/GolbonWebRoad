@model GolbonWebRoad.Web.Models.Addresses.AddressFormViewModel
<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ویرایش آدرس - Tecture</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <style>
        :root { --bg-color:#121212; --primary-text-color:#fff; --secondary-text-color:#a0a0a0; --card-bg:#1a1a1a; --border:#333; --accent:#4a90e2; }
        body.light-mode { --bg-color:#f4f4f5; --card-bg:#fff; --primary-text-color:#18181b; --secondary-text-color:#71717a; --border:#e4e4e7; }
        * { box-sizing: border-box; margin: 0; padding: 0; }
        body { background: var(--bg-color); color: var(--primary-text-color); font-family: Manrope, sans-serif; min-height: 100vh; }
        .container { max-width: 600px; margin: 0 auto; padding: 40px 20px; }
        h1 { margin-bottom: 30px; font-size: 2rem; text-align: center; }
        .card { background: var(--card-bg); border: 1px solid var(--border); border-radius: 16px; padding: 30px; box-shadow: 0 4px 6px rgba(0,0,0,0.1); }
        .form-group { margin-bottom: 20px; }
        label { display: block; margin-bottom: 8px; font-weight: 600; font-size: 0.95rem; }
        input[type=text], input[type=tel] { 
            width: 100%; 
            background: var(--bg-color); 
            color: var(--primary-text-color); 
            border: 2px solid var(--border); 
            border-radius: 8px; 
            padding: 12px 14px; 
            font-family: inherit; 
            font-size: 1rem;
            transition: all 0.3s ease;
        }
        input[type=text]:focus, input[type=tel]:focus { 
            outline: none; 
            border-color: var(--accent); 
            box-shadow: 0 0 0 3px rgba(74, 144, 226, 0.1);
        }
        .row { display: grid; grid-template-columns: repeat(3, 1fr); gap: 15px; }
        .checkbox-group { 
            display: flex; 
            align-items: center; 
            gap: 8px; 
            margin: 20px 0; 
            padding: 12px; 
            background: rgba(74, 144, 226, 0.05); 
            border-radius: 8px;
        }
        .checkbox-group input[type=checkbox] { 
            width: 18px; 
            height: 18px; 
            cursor: pointer; 
        }
        .checkbox-group label { 
            margin: 0; 
            cursor: pointer; 
            font-weight: 500;
        }
        .form-actions { display: flex; gap: 12px; margin-top: 30px; }
        .btn { 
            flex: 1;
            padding: 12px 24px; 
            border-radius: 8px; 
            border: 2px solid var(--accent); 
            background: var(--accent); 
            color: #fff; 
            text-decoration: none; 
            font-weight: 600; 
            font-size: 1rem;
            cursor: pointer; 
            transition: all 0.3s ease; 
            text-align: center;
        }
        .btn:hover { 
            background: transparent; 
            color: var(--accent); 
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(74, 144, 226, 0.2);
        }
        .btn-outline { background: transparent; color: var(--accent); }
        .btn-outline:hover { 
            background: var(--accent); 
            color: #fff; 
        }
        
        @@media (max-width: 768px) {
            .container { padding: 20px 15px; }
            .card { padding: 20px; border-radius: 12px; }
            h1 { font-size: 1.6rem; margin-bottom: 20px; }
            .row { grid-template-columns: 1fr; gap: 0; }
            .form-actions { flex-direction: column; }
            .btn { width: 100%; }
        }
    </style>
    <script>document.addEventListener('DOMContentLoaded',()=>{ const t=localStorage.getItem('theme'); if(t==='light') document.body.classList.add('light-mode'); });</script>
    </head>
    <body>
        <div class="container">
            <h1>ویرایش آدرس</h1>
            <div class="card">
                <form asp-action="Edit" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label>شماره تماس</label>
                        <input type="tel" asp-for="Phone" placeholder="مثال: 09123456789" />
                    </div>
                    <div class="form-group">
                        <label>آدرس کامل</label>
                        <input type="text" asp-for="AddressLine" placeholder="خیابان، کوچه، پلاک، واحد" />
                    </div>
                    <div class="row">
                        <div class="form-group">
                            <label>شهر</label>
                            <input type="text" asp-for="City" placeholder="شهر" />
                        </div>
                        <div class="form-group">
                            <label>استان</label>
                            <input type="text" asp-for="Province" placeholder="استان" />
                        </div>
                        <div class="form-group">
                            <label>کد پستی</label>
                            <input type="text" asp-for="PostalCode" placeholder="کد پستی" />
                        </div>
                    </div>
                    <div class="checkbox-group">
                        <input type="checkbox" asp-for="IsDefault" id="isDefault" />
                        <label for="isDefault">به عنوان پیش‌فرض</label>
                    </div>
                    <div class="form-actions">
                        <button type="submit" class="btn">ذخیره تغییرات</button>
                        <a asp-action="Index" class="btn btn-outline">انصراف</a>
                    </div>
                </form>
            </div>
        </div>
    </body>
    </html>


