@using GolbonWebRoad.Web.Models.Cart
@model CartViewModel
@{
    ViewData["Title"] = "سبد خرید";
    // Calculate the total price
    decimal totalPrice = Model?.CartItems?.Sum(item => item.Price * item.Quantity) ?? 0;
}
<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>سبد خرید - فروشگاه Tecture</title>

    

    <link rel="stylesheet" href="~/css/fonts.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/all.min.css" />

    <link rel="stylesheet" href="~/lib/swiper/swiper-bundle.min.css" />
    <link rel="stylesheet" href="~/lib/aos/aos.css" />
    @Html.Partial("_CommonStyles")

    <style>
        /* --- استایل‌های خاص صفحه سبد خرید --- */

        .cart-section { padding: 50px 0; }
        .cart-layout { display: grid; grid-template-columns: 2fr 1fr; gap: 30px; }

        .cart-items { background-color: var(--card-bg-color); border: 1px solid var(--border-color); padding: 20px; transition: background-color 0.3s ease, border-color 0.3s ease; }
        .cart-item { display: flex; gap: 20px; align-items: center; padding: 20px 0; border-bottom: 1px solid var(--border-color); }
        .cart-item:last-child { border-bottom: none; }
        .cart-item-image img { width: 100px; height: 100px; object-fit: cover; }
        .cart-item-details { flex-grow: 1; }
        .cart-item-details h3 { font-size: 1.1rem; }
        .cart-item-details .price { color: var(--secondary-text-color); }
        .quantity-selector { display: flex; align-items: center; border: 1px solid var(--border-color); max-width: 120px; }
        .quantity-selector button { background: none; border: none; color: var(--primary-text-color); font-size: 1.2rem; padding: 5px 12px; cursor: pointer; }
        .quantity-selector input { width: 40px; text-align: center; background: none; border: none; color: var(--primary-text-color); font-size: 1.1rem; border-left: 1px solid var(--border-color); border-right: 1px solid var(--border-color); }
        .item-total-price { font-weight: 700; font-size: 1.2rem; }
        .remove-item-btn { background: none; border: none; color: var(--secondary-text-color); font-size: 1.2rem; cursor: pointer; }
        .remove-item-btn:hover { color: #e24a4a; }

        .order-summary { background-color: var(--card-bg-color); border: 1px solid var(--border-color); padding: 20px; position: sticky; top: 110px; transition: background-color 0.3s ease, border-color 0.3s ease;}
        .order-summary h2 { font-size: 1.5rem; margin-bottom: 20px; padding-bottom: 15px; border-bottom: 1px solid var(--border-color); }
        .summary-row { display: flex; justify-content: space-between; margin-bottom: 15px; }
        .summary-total { font-size: 1.2rem; font-weight: 700; border-top: 1px solid var(--border-color); padding-top: 15px; }
        .coupon-form { margin-top: 20px; }
        .coupon-form input { width: 100%; background-color: var(--bg-color); color: var(--primary-text-color); border: 1px solid var(--border-color); padding: 10px; margin-bottom: 10px; }
        .btn {
            display: block;
            width: 100%;
        }
        .btn-secondary {
            margin-top: 10px;
        }

        /* --- Responsive --- */
        @@media (max-width: 992px) {
            .cart-layout { grid-template-columns: 1fr; }
        }
    </style>
</head>
<body>
    @Html.Partial("_Header")

    <main>
        <header class="page-header" data-aos="fade-in">
            <h1>سبد خرید شما</h1>
        </header>

        <section class="cart-section">
            <div class="container cart-layout">
                <!-- لیست محصولات در سبد -->
                <div class="cart-items" data-aos="fade-up">
                    @if (Model != null && Model.CartItems != null && Model.CartItems.Any())
                    {
                        foreach (var item in Model.CartItems)
                        {
                            var mainImage = item.Product?.ImageUrl ?? "https://placehold.co/200x200/EFEFEF/AAAAAA?text=No+Image";
                            var itemTotal = item.Price * item.Quantity;
                            int? variantId = item.VariantId;
                            <div class="cart-item">
                                <div class="cart-item-image">
                                    <img src="@mainImage" alt="@item.Product?.Name">
                                </div>
                                <div class="cart-item-details">
                                    <h3>@item.Product?.Name</h3>
                                    <p class="price">@item.Price.ToString("N0") تومان</p>
                                </div>
                                <div class="quantity-selector">
                                    <span style="padding:5px 12px">@item.Quantity</span>
                                </div>
                                <p class="item-total-price">@itemTotal.ToString("N0") تومان</p>
                                <form asp-controller="Cart" asp-action="RemoveFromCart" method="post">
                                    <input type="hidden" name="id" value="@item.ProductId" />
                                    <input type="hidden" name="variantId" value="@item.VariantId" />
                                    <button type="submit" class="remove-item-btn" title="حذف محصول"><i class="fas fa-trash"></i></button>
                                </form>
                            </div>
                        }
                    }
                    else
                    {
                        <p>سبد خرید شما خالی است.</p>
                    }
                </div>

                <!-- خلاصه سفارش -->
                <aside class="order-summary" data-aos="fade-left">
                    <h2>خلاصه سفارش</h2>
                    <div class="summary-row">
                        <span>جمع کل</span>
                        <span>@totalPrice.ToString("N0") تومان</span>
                    </div>
                    <div class="summary-row">
                        <span>هزینه ارسال</span>
                        <span>رایگان</span>
                    </div>
                    <div class="summary-row summary-total">
                        <span>مبلغ قابل پرداخت</span>
                        <span>@totalPrice.ToString("N0") تومان</span>
                    </div>
                    <form class="coupon-form">
                        <label>کد تخفیف دارید؟</label>
                        <input type="text" placeholder="کد تخفیف را وارد کنید">
                    </form>
                    <a class="btn" asp-controller="Checkout" asp-action="Index">ادامه جهت تسویه حساب</a>
                    <a asp-controller="Products" asp-action="Index" class="btn btn-secondary">ادامه خرید</a>
                </aside>
            </div>
        </section>

    </main>

    

    @Html.Partial("_CommonScripts")
</body>
</html>
