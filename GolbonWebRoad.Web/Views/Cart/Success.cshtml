@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>نتیجه پرداخت</title>
    <style>
        body{font-family:Tahoma,Arial;background:#0f172a;color:#fff;display:flex;align-items:center;justify-content:center;height:100vh;margin:0}
        .card{background:#111827;border:1px solid #374151;padding:30px;max-width:520px;text-align:center}
        .ok{color:#10b981}
        .fail{color:#ef4444}
        a{color:#60a5fa}
    </style>
    </head>
<body>
    <div class="card">
        @if (TempData["PaymentSuccess"] != null)
        {
            <h2 class="ok">پرداخت با موفقیت انجام شد</h2>
            <p>شماره پیگیری: <strong>@TempData["RefId"]</strong></p>
            <p>سفارش شما ثبت شد.</p>
        }
        else
        {
            <h2 class="fail">پرداخت ناموفق بود</h2>
            <p>@(TempData["PaymentError"]?.ToString() ?? "در هنگام پرداخت مشکلی رخ داد.")</p>
        }
        <p style="margin-top:20px"><a asp-controller="Dashboard" asp-action="Index">مشاهده سفارش‌ها</a> | <a asp-controller="Home" asp-action="Index">بازگشت به خانه</a></p>
    </div>
</body>
</html>


