@using GolbonWebRoad.Web.Models.Products
@model HomeProductViewModel
@{
    ViewData["Title"] = "صفحه اصلی";
}

<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tecture - فروشگاه آنلاین شما</title>

    <link rel="stylesheet" href="~/css/fonts.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/all.min.css" />
    
    <link rel="stylesheet" href="~/lib/swiper/swiper-bundle.min.css" />
    @* AOS library removed for performance. Replaced with IntersectionObserver. *@

    @Html.Partial("_CommonStyles")

    <style>
        /* === Performance & Animation Styles === */
        .fade-in-section {
            opacity: 0;
            transform: translateY(20px);
            transition: opacity 0.6s ease-out, transform 0.6s ease-out;
            will-change: opacity, transform; /* Hint for browser animation optimization */
        }

        .fade-in-section.is-visible {
            opacity: 1;
            transform: translateY(0);
        }
        
        /* === Home Page Specific Styles === */
        section {
            padding: 100px 0;
        }

        .section-title {
            font-size: 2.8rem;
            font-weight: 800;
            margin-bottom: 50px;
            text-align: center;
        }

        .grid-3-col {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 30px;
        }

        .hero-section {
            height: 90vh;
            display: flex;
            align-items: center;
            padding: 0;
            background: url('/images/hero-background.jpg') no-repeat center center/cover;
            position: relative;
        }

            .hero-section::after {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: linear-gradient(to right, rgba(0,0,0,0.7), transparent);
            }

        .hero-content {
            z-index: 2;
        }

            .hero-content h1 {
                font-size: 4.5rem;
                font-weight: 800;
                max-width: 600px;
                line-height: 1.2;
                margin-bottom: 20px;
                color: #FFFFFF;
            }

            .hero-content p {
                max-width: 500px;
                color: #e0e0e0;
                margin-bottom: 30px;
            }

            .hero-content .btn {
                background-color: var(--accent-color);
                color: #FFFFFF;
                padding: 12px 30px;
                border: 2px solid var(--accent-color);
                font-weight: 700;
                display: inline-block;
                transition: all 0.3s ease;
            }

                .hero-content .btn:hover {
                    background-color: transparent;
                    color: #FFFFFF;
                    border-color: #FFFFFF;
                }


        .category-slider-section {
            padding: 60px 0;
        }

        .category-card {
            background-color: var(--card-bg-color);
            border: 1px solid var(--border-color);
            padding: 20px;
            text-align: center;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .category-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 20px rgba(0,0,0,0.1);
            }

            .category-card img {
                width: 100%;
                height: 200px;
                object-fit: cover;
                margin-bottom: 15px;
            }

            .category-card h3 {
                font-size: 1.2rem;
                font-weight: 700;
            }

        .category-swiper .swiper-button-next, .category-swiper .swiper-button-prev {
            color: var(--primary-text-color);
            background-color: rgba(0, 0, 0, 0.5);
            width: 44px;
            height: 44px;
            border-radius: 50%;
        }

        .category-swiper .swiper-pagination-bullet {
            background-color: var(--secondary-text-color);
            opacity: 0.7;
        }

        .category-swiper .swiper-pagination-bullet-active {
            background-color: var(--primary-text-color);
            opacity: 1;
        }

        .product-slider-section {
            padding: 80px 0;
            background-color: #161616;
        }

        body.light-mode .product-slider-section {
            background-color: #e9e9ed;
        }

        .product-swiper .swiper-slide {
            height: auto;
            display: flex;
        }

        .product-card {
            background-color: var(--card-bg-color);
            border: 1px solid var(--border-color);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            overflow: hidden;
            will-change: transform;
            display: flex;
            flex-direction: column;
            height: 100%;
        }

            .product-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 30px rgba(0,0,0,0.2);
            }

            .product-card img {
                width: 100%;
                height: 280px;
                object-fit: cover;
                flex-shrink: 0;
            }

        .product-card-content {
            padding: 20px;
            display: flex;
            flex-direction: column;
            flex-grow: 1;
        }

        .product-card h3 {
            font-size: 1.1rem;
            margin-bottom: 10px;
            min-height: 2.6em;
            line-height: 1.3;
        }

        .price {
            font-size: 1.2rem;
            font-weight: 700;
            color: var(--primary-text-color);
            margin-bottom: 20px;
            margin-top: auto;
        }

        .btn-product {
            display: inline-block;
            background-color: var(--accent-color);
            border: 1px solid var(--accent-color);
            color: var(--primary-text-color);
            padding: 10px 20px;
            font-size: 0.9rem;
            font-weight: 700;
            transition: all 0.3s ease;
            text-align: center;
            width: 100%;
        }

            .btn-product:hover {
                background-color: transparent;
                color: var(--accent-color);
            }

        .product-swiper .swiper-button-next, .product-swiper .swiper-button-prev {
            color: var(--primary-text-color);
        }

        .product-swiper .swiper-pagination {
            bottom: -45px !important;
            position: relative;
            margin-top: 50px;
        }

        .product-swiper .swiper-pagination-bullet {
            background-color: var(--secondary-text-color);
            width: 10px;
            height: 10px;
            opacity: 0.6;
        }

        .product-swiper .swiper-pagination-bullet-active {
            background-color: var(--accent-color);
            opacity: 1;
        }

        .features-section {
            background-color: var(--card-bg-color);
        }

        .feature-card {
            text-align: center;
            padding: 40px;
        }

            .feature-card i {
                font-size: 3rem;
                margin-bottom: 20px;
                color: var(--accent-color);
            }

            .feature-card h3 {
                font-size: 1.5rem;
                margin-bottom: 15px;
            }

            .feature-card p {
                color: var(--secondary-text-color);
            }

        .deal-section {
            background: #161616;
        }

        body.light-mode .deal-section {
            background-color: #e9e9ed;
        }

        .deal-layout {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 50px;
            align-items: center;
        }

        .deal-image img {
            border: 10px solid var(--card-bg-color);
            will-change: transform;
        }

        .deal-content .section-title {
            text-align: right;
            margin-bottom: 20px;
        }

        .deal-content h3 {
            font-size: 2rem;
            margin-bottom: 15px;
        }

        .deal-description {
            color: var(--secondary-text-color);
            margin-bottom: 25px;
            max-width: 450px;
        }

        .deal-price {
            margin-bottom: 30px;
        }

            .deal-price .old-price {
                font-size: 1.5rem;
                text-decoration: line-through;
                color: var(--secondary-text-color);
                margin-left: 15px;
            }

            .deal-price .new-price {
                font-size: 2.2rem;
                font-weight: 800;
                color: var(--deal-color);
            }

        .countdown-timer {
            display: flex;
            gap: 15px;
            margin-bottom: 30px;
        }

        .time-block {
            background: var(--card-bg-color);
            border: 1px solid var(--border-color);
            padding: 15px;
            text-align: center;
            min-width: 80px;
        }

            .time-block span {
                font-size: 2rem;
                font-weight: 800;
                display: block;
            }

            .time-block small {
                font-size: 0.9rem;
                color: var(--secondary-text-color);
            }

        .btn-deal {
            background-color: var(--deal-color);
            border-color: var(--deal-color);
        }

            .btn-deal:hover {
                color: var(--deal-color);
            }

        .shop-look-section {
            background-color: var(--bg-color);
        }

        .look-card {
            position: relative;
            overflow: hidden;
        }

            .look-card img {
                transition: transform 0.4s ease;
            }

            .look-card:hover img {
                transform: scale(1.05);
            }

            .look-card .overlay {
                position: absolute;
                bottom: 0;
                left: 0;
                width: 100%;
                background: linear-gradient(to top, rgba(0,0,0,0.9), transparent);
                padding: 30px 20px;
                color: white;
                transition: all 0.4s ease;
            }

                .look-card .overlay h3 {
                    font-size: 1.4rem;
                    margin-bottom: 10px;
                }

        .btn-look {
            display: inline-block;
            background: var(--accent-color);
            padding: 8px 18px;
            font-weight: 700;
            font-size: 0.9rem;
            margin-top: 10px;
            border: 1px solid var(--accent-color);
        }

            .btn-look:hover {
                background: transparent;
                color: var(--primary-text-color);
            }

        body.light-mode .btn-look:hover {
            color: var(--accent-color);
        }

        .about-section {
            background-color: #161616;
        }

        body.light-mode .about-section {
            background-color: #e9e9ed;
        }

        .about-layout {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 50px;
            align-items: center;
        }

        .about-image img {
            border: 10px solid var(--card-bg-color);
            will-change: transform;
        }

        .about-text .section-title {
            text-align: right;
        }

        .testimonials-section {
            background-color: var(--card-bg-color);
        }

        .testimonial-card {
            border: 1px solid var(--border-color);
            padding: 30px;
            text-align: center;
        }

            .testimonial-card img {
                width: 80px;
                height: 80px;
                border-radius: 50%;
                margin: 0 auto 20px;
                object-fit: cover;
            }

            .testimonial-card .author {
                font-weight: 700;
                font-size: 1.1rem;
                margin-top: 15px;
            }

            .testimonial-card .role {
                color: var(--secondary-text-color);
                font-size: 0.9rem;
            }

        .blog-card {
            background-color: var(--card-bg-color);
        }

        .blog-card-content {
            padding: 25px;
        }

            .blog-card-content h3 {
                font-size: 1.3rem;
                margin-bottom: 10px;
            }

            .blog-card-content a {
                font-weight: 700;
                margin-top: 15px;
                display: inline-block;
                color: var(--accent-color);
            }


        @@media (max-width: 768px) {
            .grid-3-col, .about-layout, .deal-layout {
                grid-template-columns: 1fr;
            }

            .section-title, .hero-content h1 {
                font-size: 2.5rem;
            }

            .about-text .section-title, .deal-content .section-title {
                text-align: center;
            }
        }
        /* =================================== */
        /* === استایل‌های جدید برای اسلایدر دسته‌بندی === */
        /* =================================== */
        .category-slider-section {
            background-color: var(--card-bg-color);
            padding: 80px 0;
            overflow: hidden; /* جلوگیری از نمایش ناخواسته اسلایدها */
        }

        .category-swiper {
            width: 100%;
            padding-top: 50px;
            padding-bottom: 50px;
        }

            .category-swiper .swiper-slide {
                background-position: center;
                background-size: cover;
                width: 300px;
                height: 400px;
                filter: grayscale(80%);
                transition: filter 0.5s ease;
            }

                /* حالت فعال و هاور شده اسلاید */
                .category-swiper .swiper-slide-active,
                .category-swiper .swiper-slide:hover {
                    filter: grayscale(0%);
                }

        .category-slide-card {
            display: block;
            width: 100%;
            height: 100%;
            position: relative;
            overflow: hidden;
            border-radius: 12px; /* گوشه‌های گرد برای زیبایی بیشتر */
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
        }

            .category-slide-card img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                transition: transform 0.4s ease;
            }

            .category-slide-card:hover img {
                transform: scale(1.05);
            }

        .category-overlay {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            background: linear-gradient(to top, rgba(0, 0, 0, 0.9) 0%, rgba(0, 0, 0, 0) 100%);
            padding: 25px 20px;
            color: #fff;
            text-align: right;
            transition: all 0.4s ease;
        }

            /* ================================================= */
            /* === استایل جدید برای نمایش دائمی محتوای کارت === */
            /* ================================================= */

            .category-overlay h3,
            .category-overlay span {
                /* نمایش دائمی محتوا با یک انیمیشن نرم */
                opacity: 1;
                transform: translateY(0);
                transition: all 0.4s ease;
            }

            .category-overlay h3 {
                font-size: 1.8rem;
                font-weight: 800;
                margin-bottom: 5px;
            }

            .category-overlay span {
                font-size: 1rem;
                font-weight: 700;
                color: var(--accent-color);
                display: inline-block;
            }

        /* استایل اسلایدهای غیرفعال */
        .category-swiper .swiper-slide:not(.swiper-slide-active) .category-overlay {
            /* کمی محو کردن پس‌زمینه برای خوانایی بهتر متن */
            background: linear-gradient(to top, rgba(0, 0, 0, 0.95) 0%, rgba(0, 0, 0, 0.1) 100%);
        }

            .category-swiper .swiper-slide:not(.swiper-slide-active) .category-overlay h3 {
                /* کوچک کردن و کمی محو کردن عنوان */
                transform: scale(0.8);
                opacity: 0.7;
            }

            .category-swiper .swiper-slide:not(.swiper-slide-active) .category-overlay span {
                /* مخفی کردن متن "مشاهده محصولات" */
                opacity: 0;
                transform: translateY(10px);
            }

        /* وقتی روی اسلاید غیرفعال هاور می‌شود، آن را شبیه اسلاید فعال می‌کنیم */
        .category-swiper .swiper-slide:not(.swiper-slide-active):hover .category-overlay h3,
        .category-swiper .swiper-slide:not(.swiper-slide-active):hover .category-overlay span {
            transform: scale(1) translateY(0);
            opacity: 1;
        }

        .category-swiper .swiper-pagination-bullet {
            background: var(--secondary-text-color);
            opacity: 0.8;
            width: 10px;
            height: 10px;
        }

        .category-swiper .swiper-pagination-bullet-active {
            background: var(--accent-color);
            opacity: 1;
        }

        /* رسپانسیو کردن اسلایدر برای موبایل */
        @@media (max-width: 768px) {
            .category-swiper .swiper-slide {
                width: 260px;
                height: 350px;
            }
        }
        /* ================================================= */
        /* === بهبود ظاهر اسلایدر دسته‌بندی در دارک مود === */
        /* ================================================= */

        /* این کد فقط زمانی اعمال می‌شود که کلاس light-mode روی body نباشد */
        body:not(.light-mode) .category-slider-section {
            position: relative; /* این برای کنترل بهتر پس‌زمینه لازم است */
            /* افکت نوری با استفاده از گرادینت‌های شعاعی */
            background:
            /* نور آبی (رنگ اصلی سایت) از گوشه بالا راست */
            radial-gradient(circle at 85% 20%, hsla(217, 76%, 60%, 0.15), transparent 40%),
            /* یک نور ملایم سفید از گوشه پایین چپ برای ایجاد تعادل */
            radial-gradient(circle at 15% 85%, hsla(0, 0%, 100%, 0.08), transparent 40%),
            /* رنگ پس‌زمینه اصلی کارت‌ها در دارک مود */
            var(--card-bg-color);
        }

        /* برای اینکه کارت‌ها در دارک مود بیشتر به چشم بیایند، یک سایه و حاشیه نوری به آن‌ها اضافه می‌کنیم */
        body:not(.light-mode) .category-slide-card {
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.5), 0 0 0 1px rgba(255, 255, 255, 0.05);
        }
    </style>
</head>
<body>
    @Html.Partial("_Header")
    <main>
        <section id="home" class="hero-section"><div class="container hero-content"><h1 class="fade-in-section is-visible">فضایی که شایسته شماست</h1><p class="fade-in-section is-visible">جدیدترین محصولات دکوراسیون داخلی را کشف کنید و خانه‌ای رویایی برای خود بسازید.</p><a href="#products" class="btn fade-in-section is-visible">مشاهده محصولات</a></div></section>

        <section id="features" class="features-section fade-in-section"><div class="container"><h2 class="section-title">چرا ما را انتخاب کنید؟</h2><div class="grid-3-col"><div class="feature-card"><i class="fa-solid fa-truck-fast"></i><h3>ارسال سریع و مطمئن</h3><p>سفارش شما در سریع‌ترین زمان ممکن و با بسته‌بندی ایمن به دستتان خواهد رسید.</p></div><div class="feature-card"><i class="fa-solid fa-shield-halved"></i><h3>پرداخت امن</h3><p>با استفاده از درگاه‌های پرداخت امن، خریدی آسوده و مطمئن را تجربه کنید.</p></div><div class="feature-card"><i class="fa-solid fa-award"></i><h3>تضمین کیفیت کالا</h3><p>ما بهترین محصولات را از برندهای معتبر برای شما فراهم کرده‌ایم و کیفیت آن‌ها را تضمین می‌کنیم.</p></div></div></div></section>

        @if (Model.ProductIsFeatured != null)
        {
            var featuredProduct = Model.ProductIsFeatured;

            <section id="deal-of-the-day" class="deal-section fade-in-section">
                <div class="container">
                    <div class="deal-layout">
                        <div class="deal-image">
                            <a asp-controller="Products" asp-action="Detail" asp-route-slog="@featuredProduct.Slog">
                                <img loading="lazy" src="@(string.IsNullOrEmpty(featuredProduct.ImageUrl) ? $"https://placehold.co/600x600/EFEFEF/AAAAAA?text={featuredProduct.Name}" : $"{featuredProduct.ImageUrl}")" alt="@featuredProduct.Name" width="600" height="600">
                            </a>
                        </div>
                        <div class="deal-content">
                            <h2 class="section-title">پیشنهاد شگفت‌انگیز</h2>
                            <h3><a asp-controller="Products" asp-action="Detail" asp-route-slog="@featuredProduct.Slog">@featuredProduct.Name</a></h3>
                            <p class="deal-description">@featuredProduct.ShortDescription</p>
                            <div class="deal-price">
                                @if (featuredProduct.OldPrice.HasValue && featuredProduct.OldPrice > featuredProduct.Price)
                                {
                                    <span class="old-price">@featuredProduct.OldPrice.Value.ToString("N0") تومان</span>
                                }
                                <span class="new-price">@featuredProduct.Price.ToString("N0") تومان</span>
                            </div>
                            <p>زمان باقی‌مانده تا پایان تخفیف:</p>
                            <div id="countdown-timer" class="countdown-timer">
                                <div class="time-block"><span id="days">0</span><small>روز</small></div>
                                <div class="time-block"><span id="hours">0</span><small>ساعت</small></div>
                                <div class="time-block"><span id="minutes">0</span><small>دقیقه</small></div>
                                <div class="time-block"><span id="seconds">0</span><small>ثانیه</small></div>
                            </div>
                            <a asp-controller="Products" asp-action="Detail" asp-route-slog="@featuredProduct.Slog" class="btn btn-deal">همین حالا بخرید</a>
                        </div>
                    </div>
                </div>
            </section>
        }

        <section id="products" class="product-slider-section fade-in-section">
            <div class="container">
                <h2 class="section-title">محصولات منتخب ما</h2>
                <div class="swiper product-swiper">
                    <div class="swiper-wrapper">
                        @if (Model.Products != null && Model.Products.Any())
                        {
                            @foreach (var product in Model.Products)
                            {
                                <div class="swiper-slide">
                                    <div class="product-card">
                                        <a asp-controller="Products" asp-action="Detail" asp-route-id="@product.Id">
                                            <img loading="lazy" src="@(string.IsNullOrEmpty(product.ImageUrl) ? $"https://placehold.co/400x300/EFEFEF/AAAAAA?text={product.Name}" : $"{product.ImageUrl}")" alt="@product.Name" width="400" height="300">
                                        </a>
                                        <div class="product-card-content">
                                            <h3><a asp-controller="Products" asp-action="Detail" asp-route-id="@product.Slog">@product.Name</a></h3>
                                            <p class="price">@product.Price.ToString("N0") تومان</p>
                                            <a asp-controller="Products" asp-action="Detail" asp-route-id="@product.Slog" class="btn-product">مشاهده جزئیات</a>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                    <div class="swiper-button-next"></div>
                    <div class="swiper-button-prev"></div>
                    <div class="swiper-pagination"></div>
                </div>
            </div>
        </section>

        <section id="categories" class="category-slider-section fade-in-section">
            <div class="container">
                <h2 class="section-title">خرید بر اساس دسته‌بندی</h2>
                <div class="swiper category-swiper">
                    <div class="swiper-wrapper">
                        @if (Model.Categories != null)
                        {
                            @foreach (var category in Model.Categories)
                            {
                                <div class="swiper-slide">
                                    <a asp-controller="Products" asp-action="Index" asp-route-categoryId="@category.Id" class="category-slide-card">
                                        <img loading="lazy" src="@(string.IsNullOrEmpty(category.ImageUrl) ? $"https://placehold.co/600x750/EFEFEF/AAAAAA?text={category.Name}" : $"{category.ImageUrl}")" alt="@category.Name" width="600" height="750">
                                        <div class="category-overlay">
                                            <h3>@category.Name</h3>
