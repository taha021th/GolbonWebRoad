@using GolbonWebRoad.Application.Dtos
@using GolbonWebRoad.Application.Dtos.Products
@model IEnumerable<ProductDto>
@{
    ViewData["Title"] = "صفحه اصلی";
}

<section class="relative bg-gray-800 text-white h-[50vh] md:h-[60vh] flex items-center justify-center text-center -mt-3">
    <img src="https://images.unsplash.com/photo-1483985988355-763728e1935b?q=80&w=2070&auto=format&fit=crop"
         alt="Showcase background"
         class="absolute inset-0 object-cover w-full h-full opacity-50" />

    <div class="relative z-10 p-4">
        <h1 class="text-4xl md:text-6xl font-extrabold leading-tight mb-4 text-shadow-lg">فروشگاه مدرن Aura</h1>
        <p class="text-lg md:text-xl mb-8 max-w-2xl mx-auto text-shadow">کیفیت، زیبایی و نوآوری در دستان شما</p>
        <a asp-controller="Products" asp-action="Index"
           class="bg-indigo-600 hover:bg-indigo-500 text-white font-bold py-3 px-8 rounded-full text-lg transition-all duration-300 transform hover:scale-105 shadow-lg">
            همین حالا خرید کنید
        </a>
    </div>
</section>

<div class="container mx-auto px-4 py-16">

    <section id="categories" class="mb-20">
        <h2 class="text-3xl font-bold text-center text-gray-800 mb-10">دسته‌بندی‌ها</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
            <a href="#" class="relative rounded-xl overflow-hidden h-64 group shadow-lg hover:shadow-2xl transition-shadow duration-300">
                <img src="https://images.unsplash.com/photo-1588402128718-315535564f33?q=80&w=1964&auto=format&fit=crop" alt="اکسسوری" class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110" />
                <div class="absolute inset-0 bg-black bg-opacity-40 flex items-center justify-center">
                    <h3 class="text-white text-2xl font-bold">اکسسوری</h3>
                </div>
            </a>
            <a href="#" class="relative rounded-xl overflow-hidden h-64 group shadow-lg hover:shadow-2xl transition-shadow duration-300">
                <img src="https://images.unsplash.com/photo-1550009158-94ae76552485?q=80&w=1887&auto=format&fit=crop" alt="گجت‌ها" class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110" />
                <div class="absolute inset-0 bg-black bg-opacity-40 flex items-center justify-center">
                    <h3 class="text-white text-2xl font-bold">گجت‌ها</h3>
                </div>
            </a>
            <a href="#" class="relative rounded-xl overflow-hidden h-64 group shadow-lg hover:shadow-2xl transition-shadow duration-300">
                <img src="https://images.unsplash.com/photo-1490481651871-ab68de25d43d?q=80&w=2070&auto=format&fit=crop" alt="پوشاک" class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110" />
                <div class="absolute inset-0 bg-black bg-opacity-40 flex items-center justify-center">
                    <h3 class="text-white text-2xl font-bold">پوشاک</h3>
                </div>
            </a>
            <a href="#" class="relative rounded-xl overflow-hidden h-64 group shadow-lg hover:shadow-2xl transition-shadow duration-300">
                <img src="https://images.unsplash.com/photo-1525966222134-fc30118aeacb?q=80&w=1887&auto=format&fit=crop" alt="کفش" class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110" />
                <div class="absolute inset-0 bg-black bg-opacity-40 flex items-center justify-center">
                    <h3 class="text-white text-2xl font-bold">کفش</h3>
                </div>
            </a>
        </div>
    </section>

    <section id="featured-products">
        <h2 class="text-3xl font-bold text-center text-gray-800 mb-10">جدیدترین محصولات</h2>

        @if (Model != null && Model.Any())
        {
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
                @foreach (var product in Model.Take(8))
                {
                    <div class="group border border-gray-200 rounded-lg overflow-hidden shadow-sm hover:shadow-xl transition-shadow duration-300 bg-white">
                        <a asp-controller="Products" asp-action="Detail" asp-route-id="@product.Id" class="block overflow-hidden bg-gray-100">
                            <img src="@(string.IsNullOrEmpty(product.ImageUrl) ? "https://placehold.co/600x400/EEE/31343C?text=Aura" : product.ImageUrl)"
                                 alt="@product.Name"
                                 class="w-full h-60 object-cover group-hover:scale-110 transition-transform duration-500" />
                        </a>
                        <div class="p-4">
                            <h3 class="text-lg font-semibold text-gray-800 truncate">
                                <a asp-controller="Products" asp-action="Detail" asp-route-id="@product.Id" class="hover:text-indigo-600">@product.Name</a>
                            </h3>
                            <p class="text-gray-500 mt-1 text-sm">@product.Id</p> <div class="flex justify-between items-center mt-4">
                                <span class="text-xl font-bold text-indigo-700">@product.Price.ToString("N0") تومان</span>
                                <a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@product.Id" class="bg-gray-100 text-gray-700 hover:bg-indigo-600 hover:text-white rounded-full p-2 transition-all duration-300">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                                    </svg>
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <p class="text-center text-gray-500">محصولی برای نمایش یافت نشد.</p>
        }
    </section>

</div>