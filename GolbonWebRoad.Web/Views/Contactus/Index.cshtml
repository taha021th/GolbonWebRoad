<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>تماس با ما - فروشگاه گلبن</title>
    <meta name="description" content="با ما در تماس باشید. آدرس، تلفن، ایمیل و راه‌های ارتباطی فروشگاه گلبن. پاسخگویی به سوالات شما در سریعترین زمان ممکن." />

    @{
        var request = Context.Request;
        var pageUrl = $"{request.Scheme}://{request.Host}/contactus";
        var ogImage = "https://placehold.co/1200x630/EFEFEF/AAAAAA?text=Contact+Us";

        // Breadcrumb JSON-LD
        var homeUrl = $"{request.Scheme}://{request.Host}/";
        var breadcrumb = new Dictionary<string, object?>
        {
            ["@context"] = "https://schema.org",
            ["@type"] = "BreadcrumbList",
            ["itemListElement"] = new List<Dictionary<string, object?>>
            {
                new Dictionary<string, object?> { ["@type"] = "ListItem", ["position"] = 1, ["name"] = "خانه", ["item"] = homeUrl },
                new Dictionary<string, object?> { ["@type"] = "ListItem", ["position"] = 2, ["name"] = "تماس با ما", ["item"] = pageUrl }
            }
        };

        // ContactPage JSON-LD
        var contactPage = new Dictionary<string, object?>
        {
            ["@context"] = "https://schema.org",
            ["@type"] = "ContactPage",
            ["name"] = "تماس با ما",
            ["description"] = "راه‌های ارتباطی با فروشگاه گلبن",
            ["url"] = pageUrl,
            ["inLanguage"] = "fa-IR"
        };

        // Organization JSON-LD
        var organization = new Dictionary<string, object?>
        {
            ["@context"] = "https://schema.org",
            ["@type"] = "Organization",
            ["name"] = "فروشگاه گلبن",
            ["url"] = homeUrl,
            ["contactPoint"] = new Dictionary<string, object?>
            {
                ["@type"] = "ContactPoint",
                ["telephone"] = "+98-21-12345678",
                ["contactType"] = "customer service",
                ["availableLanguage"] = "Persian"
            },
            ["address"] = new Dictionary<string, object?>
            {
                ["@type"] = "PostalAddress",
                ["streetAddress"] = "خیابان ولیعصر، برج تجاری گلبن، طبقه ۵",
                ["addressLocality"] = "تهران",
                ["addressCountry"] = "IR"
            },
            ["email"] = "support@golbon.com"
        };

        var jsonOptions = new System.Text.Json.JsonSerializerOptions
        {
            DefaultIgnoreCondition = System.Text.Json.Serialization.JsonIgnoreCondition.WhenWritingNull,
            Encoder = System.Text.Encodings.Web.JavaScriptEncoder.UnsafeRelaxedJsonEscaping
        };
    }

    <link rel="canonical" href="@pageUrl" />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content="تماس با ما - فروشگاه گلبن" />
    <meta property="og:description" content="با ما در تماس باشید. آدرس، تلفن، ایمیل و راه‌های ارتباطی فروشگاه گلبن." />
    <meta property="og:url" content="@pageUrl" />
    <meta property="og:site_name" content="@Context.Request.Host" />
    <meta property="og:locale" content="fa_IR" />
    <meta property="og:image" content="@ogImage" />

    <!-- Twitter Cards -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="تماس با ما - فروشگاه گلبن" />
    <meta name="twitter:description" content="با ما در تماس باشید. آدرس، تلفن، ایمیل و راه‌های ارتباطی فروشگاه گلبن." />
    <meta name="twitter:image" content="@ogImage" />
    <meta name="twitter:url" content="@pageUrl" />

    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json">
        @Html.Raw(System.Text.Json.JsonSerializer.Serialize(breadcrumb, jsonOptions))
    </script>
    <script type="application/ld+json">
        @Html.Raw(System.Text.Json.JsonSerializer.Serialize(contactPage, jsonOptions))
    </script>
    <script type="application/ld+json">
        @Html.Raw(System.Text.Json.JsonSerializer.Serialize(organization, jsonOptions))
    </script>

    <link rel="stylesheet" href="~/css/fonts.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/all.min.css" />

    @Html.Partial("_CommonStyles")

    <style>
        /* --- Contact Page Specific Styles --- */

        /* --- استایل‌های صفحه تماس با ما --- */
        .page-header { padding: 60px 0; background-color: var(--card-bg-color); text-align: center; border-bottom: 1px solid var(--border-color); transition: background-color 0.3s ease, border-color 0.3s ease; }
        .page-header h1 { font-size: 3rem; font-weight: 800; }

        .contact-section { padding: 80px 0; }
        .contact-layout { display: grid; grid-template-columns: 1fr 1fr; gap: 50px; }

        .contact-info, .contact-form { background-color: var(--card-bg-color); border: 1px solid var(--border-color); padding: 30px; transition: background-color 0.3s ease, border-color 0.3s ease; }
        .contact-info h2, .contact-form h2 { font-size: 1.8rem; margin-bottom: 25px; }

        .info-item { display: flex; align-items: flex-start; gap: 20px; margin-bottom: 25px; }
        .info-item i { font-size: 1.5rem; color: var(--accent-color); margin-top: 5px; }
        .info-item-text h3 { font-size: 1.2rem; margin-bottom: 5px; }
        .info-item-text p { color: var(--secondary-text-color); }

        .social-links a { font-size: 1.5rem; margin-left: 15px; color: var(--secondary-text-color); }

        .form-group { margin-bottom: 20px; }
        .form-group label { display: block; margin-bottom: 8px; font-weight: 700; }
        .form-group input, .form-group textarea { width: 100%; background-color: var(--bg-color); color: var(--primary-text-color); border: 1px solid var(--border-color); padding: 12px; font-family: var(--main-font); font-size: 1rem; }
        .form-group textarea { resize: vertical; min-height: 120px; }

        .btn { display: inline-block; width: auto; text-align: center; background-color: var(--accent-color); color: white; border: 2px solid var(--accent-color); padding: 12px 30px; font-weight: 700; cursor: pointer; transition: all 0.3s ease; font-size: 1rem;}
        .btn:hover { background-color: transparent; color: var(--accent-color); }

        .map-section { padding-bottom: 80px; }
        .map-container { border: 1px solid var(--border-color); padding: 10px; background-color: var(--card-bg-color); }
        .map-container iframe { filter: invert(100%) grayscale(80%); }
        body.light-mode .map-container iframe { filter: none; }

        /* --- Responsive --- */
        @@media (max-width: 992px) { .main-nav, .header-action-link span { display: none; } }
        @@media (max-width: 768px) {
            .contact-layout { grid-template-columns: 1fr; }
        }
    </style>
</head>
<body>
    @Html.Partial("_Header")

    <main>
        <header class="page-header">
            <h1>تماس با ما</h1>
        </header>

        <section class="contact-section">
            <div class="container contact-layout">
                <div class="contact-info">
                    <h2>راه‌های ارتباطی</h2>
                    <p>همیشه آماده پاسخگویی به سوالات شما هستیم. از طریق راه‌های زیر با ما در تماس باشید.</p>
                    <div class="info-item">
                        <i class="fas fa-map-marker-alt"></i>
                        <div class="info-item-text">
                            <h3>آدرس</h3>
                            <p>تهران، خیابان ولیعصر، برج تجاری گلبن، طبقه ۵</p>
                        </div>
                    </div>
                    <div class="info-item">
                        <i class="fas fa-phone"></i>
                        <div class="info-item-text">
                            <h3>تلفن</h3>
                            <p>۰۲۱-۱۲۳۴۵۶۷۸</p>
                        </div>
                    </div>
                    <div class="info-item">
                        <i class="fas fa-envelope"></i>
                        <div class="info-item-text">
                            <h3>ایمیل</h3>
                            <p>support@golbon.com</p>
                        </div>
                    </div>
                    <div class="social-links">
                        <a href="#"><i class="fab fa-instagram"></i></a>
                        <a href="#"><i class="fab fa-telegram"></i></a>
                        <a href="#"><i class="fab fa-whatsapp"></i></a>
                    </div>
                </div>

                <div class="contact-form">
                    <h2>ارسال پیام</h2>
                    <form>
                        <div class="form-group">
                            <label for="name">نام شما</label>
                            <input type="text" id="name" required>
                        </div>
                        <div class="form-group">
                            <label for="email">ایمیل شما</label>
                            <input type="email" id="email" required>
                        </div>
                        <div class="form-group">
                            <label for="subject">موضوع</label>
                            <input type="text" id="subject" required>
                        </div>
                        <div class="form-group">
                            <label for="message">پیام شما</label>
                            <textarea id="message" required></textarea>
                        </div>
                        <button type="submit" class="btn">ارسال پیام</button>
                    </form>
                </div>
            </div>
        </section>

        <section class="map-section">
            <div class="container">
                <div class="map-container">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3239.783321522208!2d51.41113641525958!3d35.7069752801882!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3f8e01178a484c2f%3A0x6a21105e45447a14!2sValiasr%20Square!5e0!3m2!1sen!2sfr!4v1663000000000" width="100%" height="450" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
                </div>
            </div>
        </section>

    </main>

    @Html.Partial("_Footer")

    @Html.Partial("_CommonScripts")
</body>
</html>