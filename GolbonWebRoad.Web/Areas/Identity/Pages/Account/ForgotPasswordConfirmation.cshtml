@page
@model ForgotPasswordConfirmationModel
@{
    ViewData["Title"] = "تأیید ارسال ایمیل";
    Layout = null;
}

<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - فروشگاه Tecture</title>
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@400;700;800&display=swap" rel="stylesheet">
    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />

    @Html.Partial("_CommonStyles")
    
    <style>
        /* Auth Pages Specific Styles */
        .auth-page {
            min-height: 100vh;
            background: linear-gradient(135deg, var(--bg-color) 0%, var(--card-bg-color) 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }
        
        .auth-container {
            background-color: var(--card-bg-color);
            border: 1px solid var(--border-color);
            border-radius: 20px;
            padding: 40px;
            width: 100%;
            max-width: 450px;
            box-shadow: 0 10px 40px rgba(0,0,0,0.1);
            transition: all 0.3s ease;
            text-align: center;
        }
        
        body.light-mode .auth-container {
            box-shadow: 0 10px 40px rgba(0,0,0,0.05);
        }
        
        .auth-header {
            text-align: center;
            margin-bottom: 30px;
        }
        
        .auth-logo {
            font-size: 2.5rem;
            font-weight: 800;
            color: var(--accent-color);
            margin-bottom: 10px;
            letter-spacing: -1px;
        }
        
        .auth-title {
            font-size: 1.5rem;
            font-weight: 700;
            color: var(--primary-text-color);
            margin-bottom: 5px;
        }
        
        .auth-subtitle {
            color: var(--secondary-text-color);
            font-size: 0.9rem;
            line-height: 1.6;
            margin-bottom: 30px;
        }
        
        .success-icon {
            font-size: 4rem;
            color: #2ecc71;
            margin-bottom: 20px;
            animation: checkmark 0.6s ease-in-out;
        }
        
        @@keyframes checkmark {
            0% {
                transform: scale(0);
                opacity: 0;
            }
            50% {
                transform: scale(1.2);
            }
            100% {
                transform: scale(1);
                opacity: 1;
            }
        }
        
        .success-message {
            background-color: #d4edda;
            border: 1px solid #c3e6cb;
            border-radius: 12px;
            padding: 20px;
            margin-bottom: 25px;
            color: #155724;
        }
        
        body.light-mode .success-message {
            background-color: #d1ecf1;
            border-color: #bee5eb;
            color: #0c5460;
        }
        
        .success-message h3 {
            margin: 0 0 10px 0;
            font-size: 1.1rem;
            font-weight: 700;
        }
        
        .success-message p {
            margin: 0;
            font-size: 0.9rem;
            line-height: 1.6;
        }
        
        .auth-links {
            text-align: center;
            padding-top: 20px;
            border-top: 1px solid var(--border-color);
        }
        
        .auth-link {
            color: var(--accent-color);
            text-decoration: none;
            font-weight: 600;
            transition: color 0.3s ease;
            display: inline-block;
            margin: 0 10px;
        }
        
        .auth-link:hover {
            color: #3a7bc8;
        }
        
        .home-link {
            position: absolute;
            top: 20px;
            right: 20px;
            color: var(--accent-color);
            font-size: 1.2rem;
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 8px;
            font-weight: 600;
            transition: color 0.3s ease;
        }
        
        .home-link:hover {
            color: #3a7bc8;
        }
        
        .btn-auth {
            display: inline-block;
            padding: 12px 25px;
            background-color: var(--accent-color);
            color: white;
            border: none;
            border-radius: 12px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            margin: 10px 5px;
        }
        
        .btn-auth:hover {
            background-color: #3a7bc8;
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(74, 144, 226, 0.3);
            color: white;
        }
        
        .btn-secondary {
            background-color: var(--border-color);
            color: var(--primary-text-color);
        }
        
        .btn-secondary:hover {
            background-color: var(--secondary-text-color);
            color: var(--primary-text-color);
        }
        
        @@media (max-width: 768px) {
            .auth-container {
                padding: 30px 20px;
                margin: 10px;
            }
            
            .auth-logo {
                font-size: 2rem;
            }
            
            .success-icon {
                font-size: 3rem;
            }
            
            .btn-auth {
                display: block;
                margin: 10px 0;
                width: 100%;
            }
        }
    </style>
</head>
<body>
    <a href="/" class="home-link">
        <i class="fas fa-home"></i>
        <span>بازگشت به سایت</span>
    </a>
    
    <div class="auth-page">
        <div class="auth-container" data-aos="fade-up">
            <div class="auth-header">
                <div class="auth-logo">Tecture</div>
                <div class="success-icon">
                    <i class="fas fa-check-circle"></i>
                </div>
                <h1 class="auth-title">ایمیل ارسال شد</h1>
            </div>
            
            <div class="success-message">
                <h3>
                    <i class="fas fa-envelope" style="margin-left: 8px;"></i>
                    لینک بازیابی ارسال شد
                </h3>
                <p>
                    لینک بازیابی کلمه عبور به آدرس ایمیل شما ارسال شد. لطفاً صندوق پستی خود را بررسی کرده و روی لینک کلیک کنید.
                </p>
            </div>
            
            <div class="success-message" style="background-color: var(--bg-color); border-color: var(--border-color); color: var(--secondary-text-color);">
                <p>
                    <i class="fas fa-info-circle" style="color: var(--accent-color); margin-left: 8px;"></i>
                    اگر ایمیل را دریافت نکردید، پوشه Spam خود را نیز بررسی کنید.
                </p>
            </div>
            
            <div class="auth-links">
                <a asp-page="./Login" class="btn-auth">
                    <i class="fas fa-sign-in-alt" style="margin-left: 5px;"></i>
                    بازگشت به ورود
                </a>
                <a asp-page="./ForgotPassword" class="btn-auth btn-secondary">
                    <i class="fas fa-redo" style="margin-left: 5px;"></i>
                    ارسال مجدد
                </a>
            </div>
        </div>
    </div>

    @Html.Partial("_CommonScripts")
</body>
</html>
