@model IEnumerable<GolbonWebRoad.Web.Areas.Admin.Models.Brands.BrandViewModel>
@{
    ViewData["Title"] = "مدیریت برندها";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0 text-gray-800">@ViewData["Title"]</h1>
</div>

<div class="row g-4">
    <div class="col-lg-5">
        <div class="card shadow-sm">
            <div class="card-header">
                افزودن برند جدید
            </div>
            <div class="card-body">
                @* The form posts to the Create action of BrandsController *@
                <form asp-action="Create" method="post">
                    @Html.AntiForgeryToken()

                    <div class="mb-3">
                        <label for="Name" class="form-label">نام برند</label>
                        @* This input will be bound to the 'Name' property of CreateBrandViewModel *@
                        <input name="Name" id="Name" class="form-control" required />
                    </div>

                    <div class="text-end">
                        <button type="submit" class="btn btn-primary">ذخیره برند</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-lg-7">
        <div class="card shadow-sm">
            <div class="card-header">
                لیست برندها
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-striped table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="py-3 px-4">نام برند</th>
                                <th class="py-3 px-4 text-center">عملیات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="align-middle px-4">@item.Name</td>
                                        <td class="align-middle text-center px-4">
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary" title="ویرایش">
                                                <i class="fas fa-pen"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="حذف">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="2" class="text-center py-4 text-muted">هیچ برندی یافت نشد.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>