@model GolbonWebRoad.Web.Areas.Admin.Models.Brands.DeleteBrandViewModel
@{
    ViewData["Title"] = "حذف برند";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-sm border-danger">
            <div class="card-header bg-danger text-white">
                <h3 class="mb-0">تأیید حذف</h3>
            </div>
            <div class="card-body">
                <p>
                    آیا از حذف برند <strong>@Model.Name</strong> مطمئن هستید؟
                    <br />
                    این عملیات غیرقابل بازگشت است.
                </p>
            </div>
            <div class="card-footer bg-light text-end">
                <form asp-action="Delete" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />
                    <a asp-action="Index" class="btn btn-secondary">انصراف</a>
                    <button type="submit" class="btn btn-danger">بله، حذف کن</button>
                </form>
            </div>
        </div>
    </div>
</div>