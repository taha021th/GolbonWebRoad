@model GolbonWebRoad.Web.Areas.Admin.Models.Orders.OrderDetailViewModel
@{
    ViewData["Title"] = "جزئیات سفارش #" + Model.Id;

    string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "PaymentReceived" => "bg-success",
            "Pending" => "bg-warning text-dark",
            "Shipped" => "bg-info text-dark",
            "Cancelled" => "bg-danger",
            _ => "bg-secondary"
        };
    }
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0">@ViewData["Title"]</h1>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-right me-2"></i> بازگشت به لیست سفارشات
    </a>
</div>

<div class="row g-4">
    <!-- Order Items and Status Update -->
    <div class="col-lg-8">
        <div class="card shadow-sm">
            <div class="card-header">
                <h5 class="mb-0">اقلام سفارش</h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="ps-4">محصول</th>
                                <th>قیمت واحد</th>
                                <th class="text-center">تعداد</th>
                                <th class="text-end pe-4">جمع کل</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.OrderItems)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <p class="fw-bold mb-1">@item.ProductName</p>
                                    </td>
                                    <td>@item.Price.ToString("N0") تومان</td>
                                    <td class="text-center">@item.Quantity</td>
                                    <td class="text-end pe-4">@item.TotalPrice.ToString("N0") تومان</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer d-flex justify-content-end fw-bold fs-5 p-3">
                <span>مبلغ نهایی سفارش: </span>
                <span class="me-2 text-primary">@Model.TotalAmount.ToString("N0") تومان</span>
            </div>
        </div>
    </div>

    <!-- Order & Customer Info -->
    <div class="col-lg-4">
        <div class="card shadow-sm mb-4">
            <div class="card-header">
                <h5 class="mb-0">اطلاعات سفارش</h5>
            </div>
            <div class="card-body">
                <ul class="list-unstyled">
                    <li class="d-flex justify-content-between mb-2">
                        <span class="text-muted">شماره سفارش:</span>
                        <span class="fw-bold">#@Model.Id</span>
                    </li>
                    <li class="d-flex justify-content-between mb-2">
                        <span class="text-muted">نام کاربری مشتری:</span>
                        <span class="fw-bold">@Model.UserName</span>
                    </li>
                    <li class="d-flex justify-content-between mb-2">
                        <span class="text-muted">تاریخ ثبت:</span>
                        <span>@Model.OrderDate</span>
                    </li>
                    <li class="d-flex justify-content-between align-items-center">
                        <span class="text-muted">وضعیت فعلی:</span>
                        <span class="badge @GetStatusBadgeClass(Model.OrderStatus)">@Model.OrderStatus</span>
                    </li>
                </ul>
                <hr>
                <form asp-action="UpdateStatus" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@Model.Id" />
                    <div class="mb-3">
                        <label for="status" class="form-label">تغییر وضعیت سفارش</label>
                        <select name="status" id="status" class="form-select">
                            <option value="Pending" selected="@(Model.OrderStatus == "Pending")">Pending</option>
                            <option value="PaymentReceived" selected="@(Model.OrderStatus == "PaymentReceived")">PaymentReceived</option>
                            <option value="Shipped" selected="@(Model.OrderStatus == "Shipped")">Shipped</option>
                            <option value="Cancelled" selected="@(Model.OrderStatus == "Cancelled")">Cancelled</option>
                        </select>
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">به‌روزرسانی وضعیت</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

