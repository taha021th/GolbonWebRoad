@model IEnumerable<GolbonWebRoad.Application.Dtos.OrderDto>
@{
    ViewData["Title"] = "مدیریت سفارشات";
}

<div class="bg-white p-6 rounded-xl shadow-md">
    <div class="flex justify-between items-center mb-6">
        <h2 class="text-2xl font-bold">لیست سفارشات</h2>
    </div>

    <div class="overflow-x-auto">
        <table class="w-full text-sm text-right">
            <thead class="bg-gray-50">
                <tr>
                    <th class="p-3">شماره سفارش</th>
                    <th class="p-3">نام کاربر</th>
                    <th class="p-3">تاریخ ثبت</th>
                    <th class="p-3">مبلغ کل</th>
                    <th class="p-3">وضعیت</th>
                    <th class="p-3"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr class="border-b hover:bg-gray-50">
                        <td class="p-3 font-mono">#@order.Id</td>
                        <td class="p-3 font-semibold">@order.UserId</td>
                        <td class="p-3">@order.OrderDate.ToShortDateString()</td>
                        <td class="p-3">@order.TotalAmount.ToString("N0") تومان</td>
                        <td class="p-3">
                            @if (order.OrderStatus == "تکمیل شده")
                                {
                                    <span class="bg-green-100 text-green-700 px-2 py-1 rounded-full text-xs">تکمیل شده</span>
                                }
                            else
                                {
                                    <span class="bg-yellow-100 text-yellow-700 px-2 py-1 rounded-full text-xs">در حال پردازش</span>
                                }
                        </td>
                        <td class="p-3">
                                <a asp-action="Detail" asp-route-id="@order.Id" class="font-semibold text-indigo-600 hover:underline">مشاهده جزئیات</a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>