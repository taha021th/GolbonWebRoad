@using GolbonWebRoad.Web.Areas.Admin.Models.Products.ViewModels
@model CreateProductViewModel
@{
    ViewData["Title"] = "افزودن محصول جدید";
}

<div class="bg-white p-6 rounded-xl shadow-md">
    <h2 class="text-2xl font-bold mb-6 border-b pb-4">فرم محصول جدید</h2>

    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4"></div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="md:col-span-2">
                <label asp-for="Name" class="block font-semibold text-gray-700 mb-2">نام محصول</label>
                <input asp-for="Name" class="w-full p-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-indigo-300 outline-none transition" />
                <span asp-validation-for="Name" class="text-red-500 text-sm mt-1"></span>
            </div>
            <div class="md:col-span-2">
                <label asp-for="Slog" class="block font-semibold text-gray-700 mb-2">Slog</label>
                <input asp-for="Slog" class="w-full p-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-indigo-300 outline-none transition" />
                <span asp-validation-for="Slog" class="text-red-500 text-sm mt-1"></span>
            </div>

            <div>
                <label asp-for="Price" class="block font-semibold text-gray-700 mb-2">قیمت</label>
                <input asp-for="Price" class="w-full p-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-indigo-300 outline-none transition" />
                <span asp-validation-for="Price" class="text-red-500 text-sm mt-1"></span>
            </div>

            <div>
                <label asp-for="Categories" class="block font-semibold text-gray-700 mb-2">دسته‌بندی</label>
                <select asp-for="CategoryId" asp-items="@(new SelectList(Model.Categories, "Id", "Name"))" class="w-full p-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-indigo-300 outline-none transition">
                    <option value="">یک دسته‌بندی انتخاب کنید</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-red-500 text-sm mt-1"></span>
            </div>

            <div class="md:col-span-2">
                <label asp-for="Description" class="block font-semibold text-gray-700 mb-2">توضیحات</label>
                <textarea asp-for="Description" rows="4" class="w-full p-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-indigo-300 outline-none transition"></textarea>
                <span asp-validation-for="Description" class="text-red-500 text-sm mt-1"></span>
            </div>

            <div class="md:col-span-2">
                <label asp-for="ImageFile" class="block font-semibold text-gray-700 mb-2">تصویر محصول</label>
                <input asp-for="ImageFile" type="file" class="w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-indigo-50 file:text-indigo-700 hover:file:bg-indigo-100" />
                <span asp-validation-for="ImageFile" class="text-red-500 text-sm mt-1"></span>
            </div>
        </div>

        <div class="mt-8 flex justify-end gap-4">
            <a asp-action="Index" class="bg-gray-200 text-gray-800 font-bold py-2 px-6 rounded-lg hover:bg-gray-300 transition">انصراف</a>
            <button type="submit" class="bg-indigo-600 text-white font-bold py-2 px-6 rounded-lg hover:bg-indigo-700 transition">ذخیره محصول</button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}