@model GolbonWebRoad.Web.Areas.Admin.Models.Products.ViewModels.CreateProductViewModel
@{
    ViewData["Title"] = "افزودن محصول جدید";
}

<form asp-action="Create" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3">@ViewData["Title"]</h1>
        <div>
            <a asp-action="Index" class="btn btn-secondary">انصراف</a>
            <button type="submit" class="btn btn-primary">ذخیره محصول</button>
        </div>
    </div>

    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

    <div class="row g-4">
        <!-- Main Content -->
        <div class="col-lg-8">
            <div class="card shadow-sm mb-4">
                <div class="card-header">اطلاعات اصلی</div>
                <div class="card-body">
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Slog" class="form-label"></label>
                        <input asp-for="Slog" class="form-control" />
                        <span asp-validation-for="Slog" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="ShortDescription" class="form-label"></label>
                        <textarea asp-for="ShortDescription" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="ShortDescription" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="6"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm mb-4">
                <div class="card-header">تصاویر</div>
                <div class="card-body">
                    <label asp-for="Images" class="form-label"></label>
                    <input type="file" asp-for="Images" multiple class="form-control" />
                    <span asp-validation-for="Images" class="text-danger"></span>
                </div>
            </div>

            

            <div class="card shadow-sm mt-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <span>ورینت‌ها</span>
                    <button type="button" id="add-variant-btn" class="btn btn-sm btn-outline-primary">افزودن ورینت</button>
                </div>
                <div class="card-body">
                    <div id="variants-container" class="vstack gap-3">
                        <!-- Dynamic variant rows will be added here -->
                    </div>
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <div class="card shadow-sm mb-4">
                <div class="card-header">قیمت و موجودی</div>
                <div class="card-body">
                    <div class="mb-3">
                        <label asp-for="Price" class="form-label"></label>
                        <input asp-for="Price" type="number" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="OldPrice" class="form-label"></label>
                        <input asp-for="OldPrice" type="number" class="form-control" />
                        <span asp-validation-for="OldPrice" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Quantity" class="form-label"></label>
                        <input asp-for="Quantity" type="number" class="form-control" />
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="SKU" class="form-label"></label>
                        <input asp-for="SKU" class="form-control" />
                        <span asp-validation-for="SKU" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm mb-4">
                <div class="card-header">دسته‌بندی</div>
                <div class="card-body">
                    <div class="mb-3">
                        <label asp-for="CategoryId" class="form-label"></label>
                        <select asp-for="CategoryId" asp-items="Model.CategoryOptions" class="form-select">
                            <option value="">یک دسته‌بندی انتخاب کنید</option>
                        </select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="BrandId" class="form-label"></label>
                        <select asp-for="BrandId" asp-items="Model.BrandOptions" class="form-select">
                            <option value="">یک برند انتخاب کنید</option>
                        </select>
                        <span asp-validation-for="BrandId" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="form-check">
                        <input asp-for="IsFeatured" type="checkbox" class="form-check-input" />
                        <label asp-for="IsFeatured" class="form-check-label"></label>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const variantsContainer = document.getElementById('variants-container');
            let variantIndex = 0;

            function addVariantRow() {
                const wrapper = document.createElement('div');
                wrapper.classList.add('border', 'rounded', 'p-3');
                wrapper.innerHTML = `
<div class="row g-2 align-items-end">
  <div class="col-md-3">
    <label class="form-label">SKU</label>
    <input type="text" name="Variants[${variantIndex}].Sku" class="form-control" required />
  </div>
  <div class="col-md-2">
    <label class="form-label">قیمت</label>
    <input type="number" name="Variants[${variantIndex}].Price" class="form-control" min="1" step="0.01" required />
  </div>
  <div class="col-md-2">
    <label class="form-label">قیمت قدیم</label>
    <input type="number" name="Variants[${variantIndex}].OldPrice" class="form-control" step="0.01" />
  </div>
  <div class="col-md-2">
    <label class="form-label">موجودی</label>
    <input type="number" name="Variants[${variantIndex}].StockQuantity" class="form-control" min="0" />
  </div>
  <div class="col-md-7">
    <div class="row g-2">
      @if (Model.AttributeGroups != null)
      {
          var gIndex = 0;
          foreach (var grp in Model.AttributeGroups)
          {
              <div class="col-md-4">
                <label class="form-label">@grp.AttributeName</label>
                <select name="Variants[${variantIndex}].AttributeValueIds" class="form-select">
                  <option value="">-- انتخاب --</option>
                  @foreach (var opt in grp.Values)
                  {
                      <option value="@opt.Value">@opt.Text</option>
                  }
                </select>
              </div>
              gIndex++;
          }
      }
    </div>
  </div>
  <div class="col-12 text-end mt-2">
    <button type="button" class="btn btn-sm btn-outline-danger remove-variant-btn">حذف ورینت</button>
  </div>
</div>`;
                variantsContainer.appendChild(wrapper);
                variantIndex++;
            }

            document.getElementById('add-variant-btn').addEventListener('click', addVariantRow);
            variantsContainer.addEventListener('click', function (e) {
                if (e.target.classList.contains('remove-variant-btn')) {
                    e.target.closest('.border').remove();
                }
            });
        });
    </script>
}
