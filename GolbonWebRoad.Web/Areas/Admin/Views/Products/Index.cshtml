@model IEnumerable<GolbonWebRoad.Web.Areas.Admin.Models.Products.ViewModels.ProductViewModel>
@{
    ViewData["Title"] = "مدیریت محصولات";
}

<div class="container-fluid">

    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">@ViewData["Title"]</h1>
        <a asp-action="Create" class="btn btn-primary shadow-sm">
            <i class="fas fa-plus fa-sm text-white-50"></i> افزودن محصول جدید
        </a>
    </div>

    <!-- Data Table -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">لیست محصولات</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>تصویر</th>
                            <th>نام محصول</th>
                            <th>دسته‌بندی</th>
                            <th>برند</th>
                            <th>قیمت</th>
                            <th>موجودی</th>
                            <th>عملیات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <img src="@(string.IsNullOrEmpty(item.ImageUrl) ? "https://placehold.co/60x60/EFEFEF/AAAAAA&text=No+Image" : item.ImageUrl)"
                                             alt="@item.Name"
                                             style="width: 60px; height: 60px; object-fit: cover; border-radius: 5px;" />
                                    </td>
                                    <td>@item.Name</td>
                                    <td>@item.CategoryName</td>
                                    <td>@item.BrandName</td>
                                    <td>@item.Price.ToString("N0") تومان</td>
                                    <td>@item.Quantity عدد</td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.Id" style="color:red" class="btn btn-warning btn-circle btn-sm" title="ویرایش">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" style="color:red" class="btn btn-danger btn-circle btn-sm" title="حذف">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center">هیچ محصولی برای نمایش وجود ندارد.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
