@model IEnumerable<GolbonWebRoad.Web.Areas.Admin.Models.Products.ViewModels.ProductViewModel>
@{
    ViewData["Title"] = "مدیریت محصولات";
}

<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0 text-gray-800">@ViewData["Title"]</h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i> افزودن محصول جدید
    </a>
</div>

<!-- Products Grid -->
<div class="row g-4">
    @if (Model != null && Model.Any())
    {
        @foreach (var item in Model)
        {
            <div class="col-sm-6 col-lg-4 col-xl-3">
                <div class="card h-100 shadow-sm">
                    <img src="@(string.IsNullOrEmpty(item.ImageUrl) ? "https://placehold.co/600x400/EFEFEF/AAAAAA&text=No+Image" : item.ImageUrl)"
                         class="card-img-top" alt="@item.Name" style="height: 200px; object-fit: cover;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text text-muted small">@item.CategoryName | @item.BrandName</p>
                        <div class="mt-auto d-flex justify-content-between align-items-center">
                            <span class="fw-bold text-primary">@item.Price.ToString("N0") تومان</span>
                            <span class="badge bg-secondary">موجودی: @item.Quantity</span>
                        </div>
                    </div>
                    <div class="card-footer bg-light text-end">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">ویرایش</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">حذف</a>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <div class="card card-body text-center">
                <p class="text-muted">هیچ محصولی برای نمایش وجود ندارد.</p>
            </div>
        </div>
    }
</div>
