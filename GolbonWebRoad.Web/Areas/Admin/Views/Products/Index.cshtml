@using GolbonWebRoad.Application.Dtos.Products;

@model IEnumerable<ProductDto>
@{
    ViewData["Title"] = "مدیریت محصولات";
}

<div class="bg-white p-6 rounded-xl shadow-md">
    <div class="flex justify-between items-center mb-6">
        <h2 class="text-2xl font-bold">لیست محصولات</h2>
        
        <a asp-action="Create" class="bg-indigo-600 text-white font-bold py-2 px-4 rounded-lg hover:bg-indigo-500 transition">
            + افزودن محصول جدید
        </a>
    </div>

    <div class="overflow-x-auto">
        <table class="w-full text-sm text-right">
            <thead class="bg-gray-50">
                <tr>
                    <th class="p-3">شناسه</th>
                    <th class="p-3">نام محصول</th>
                    <th class="p-3">قیمت</th>
                    <th class="p-3">موجودی</th>
                    <th class="p-3"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr class="border-b hover:bg-gray-50">
                        <td class="p-3 font-mono">@product.Id</td>
                        <td class="p-3 font-semibold">@product.Name</td>
                        <td class="p-3">@product.Price.ToString("N0") تومان</td>
                        <td class="p-3">100</td>
                        <td class="p-3 flex gap-2">
                            <a asp-action="Edit" asp-route-id="@product.Id" class="text-blue-600 hover:underline">ویرایش</a>

                            <a asp-action="Delete" asp-route-id="@product.Id" class="text-red-600 hover:underline">حذف</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>