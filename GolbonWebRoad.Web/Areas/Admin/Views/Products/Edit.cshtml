@model GolbonWebRoad.Web.Areas.Admin.Models.Products.ViewModels.EditProductViewModel
@{
    ViewData["Title"] = "ویرایش محصول: " + Model.Name;
}

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 text-truncate">@ViewData["Title"]</h1>
        <div>
            <a asp-action="Index" class="btn btn-secondary">انصراف</a>
            <button type="submit" class="btn btn-primary">ذخیره تغییرات</button>
        </div>
    </div>

    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

    <div class="row g-4">
        <!-- Main Content -->
        <div class="col-lg-8">
            <div class="card shadow-sm mb-4">
                <div class="card-header">اطلاعات اصلی</div>
                <div class="card-body">
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Slog" class="form-label"></label>
                        <input asp-for="Slog" class="form-control" />
                        <span asp-validation-for="Slog" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="ShortDescription" class="form-label"></label>
                        <textarea asp-for="ShortDescription" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="ShortDescription" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="6"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm mb-4">
                <div class="card-header">مدیریت تصاویر</div>
                <div class="card-body">
                    @if (Model.Images != null && Model.Images.Any())
                    {
                        <div class="mb-4">
                            <label class="form-label">تصاویر فعلی (برای حذف، تیک بزنید):</label>
                            <div class="row g-2">
                                @foreach (var image in Model.Images)
                                {
                                    <div class="col-auto">
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="checkbox" name="ImagesToDelete" value="@image.ImageUrl" id="img-@image.Id">
                                            <label class="form-check-label" for="img-@image.Id">
                                                <img src="@image.ImageUrl" class="rounded border" style="width: 80px; height: 80px; object-fit: cover;" />
                                            </label>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                    <div>
                        <label asp-for="NewImages" class="form-label"></label>
                        <input type="file" asp-for="NewImages" multiple class="form-control" />
                    </div>
                </div>
            </div>

            

            <div class="card shadow-sm mt-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <span>ورینت‌ها</span>
                    <button type="button" id="add-variant-btn" class="btn btn-sm btn-outline-primary">افزودن ورینت</button>
                </div>
                <div class="card-body">
                    <div id="variants-container" class="vstack gap-3">
                        @if (Model.Variants != null && Model.Variants.Any())
                        {
                            var i = 0;
                            foreach (var v in Model.Variants)
                            {
                                <div class="border rounded p-3 mb-2">
                                    <input type="hidden" name="Variants[@i].Id" value="@v.Id" />
                                    <div class="row g-2 align-items-end">
                                        <div class="col-md-3">
                                            <label class="form-label">SKU</label>
                                            <input type="text" name="Variants[@i].Sku" class="form-control" value="@v.Sku" required />
                                        </div>
                                        <div class="col-md-2">
                                            <label class="form-label">قیمت</label>
                                            <input type="number" name="Variants[@i].Price" class="form-control" value="@v.Price" min="1" step="0.01" required />
                                        </div>
                                        <div class="col-md-2">
                                            <label class="form-label">قیمت قدیم</label>
                                            <input type="number" name="Variants[@i].OldPrice" class="form-control" value="@v.OldPrice" step="0.01" />
                                        </div>
                                        <div class="col-md-2">
                                            <label class="form-label">موجودی</label>
                                            <input type="number" name="Variants[@i].StockQuantity" class="form-control" value="@v.StockQuantity" min="0" />
                                        </div>
                                        <div class="col-md-7">
                                            <div class="row g-2">
                                                @if (Model.AttributeGroups != null)
                                                {
                                                    foreach (var grp in Model.AttributeGroups)
                                                    {
                                                        <div class="col-md-4">
                                                            <label class="form-label">@grp.AttributeName</label>
                                                            <select name="Variants[@i].AttributeValueIds" class="form-select">
                                                                <option value="">-- انتخاب --</option>
                                                                @foreach (var opt in grp.Values)
                                                                {
                                                                    var selected = v.AttributeValueIds != null && v.AttributeValueIds.Contains(int.Parse(opt.Value));
                                                                    <option value="@opt.Value" selected="@(selected ? "selected" : null)">@opt.Text</option>
                                                                }
                                                            </select>
                                                        </div>
                                                    }
                                                }
                                            </div>
                                        </div>
                                        <div class="col-12 mt-2 d-flex justify-content-between">
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" name="Variants[@i].MarkForDeletion" id="del-@i">
                                                <label class="form-check-label" for="del-@i">حذف این ورینت</label>
                                            </div>
                                            <button type="button" class="btn btn-sm btn-outline-danger remove-variant-btn">حذف از فرم</button>
                                        </div>
                                    </div>
                                </div>
                                i++;
                            }
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <div class="card shadow-sm mb-4">
                <div class="card-header">قیمت و موجودی</div>
                <div class="card-body">
                    <div class="mb-3">
                        <label asp-for="Price" class="form-label"></label>
                        <input asp-for="Price" type="number" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="OldPrice" class="form-label"></label>
                        <input asp-for="OldPrice" type="number" class="form-control" />
                        <span asp-validation-for="OldPrice" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Quantity" class="form-label"></label>
                        <input asp-for="Quantity" type="number" class="form-control" />
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="SKU" class="form-label"></label>
                        <input asp-for="SKU" class="form-control" />
                        <span asp-validation-for="SKU" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm mb-4">
                <div class="card-header">دسته‌بندی</div>
                <div class="card-body">
                    <div class="mb-3">
                        <label asp-for="CategoryId" class="form-label"></label>
                        <select asp-for="CategoryId" asp-items="Model.CategoryOptions" class="form-select"></select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="BrandId" class="form-label"></label>
                        <select asp-for="BrandId" asp-items="Model.BrandOptions" class="form-select"></select>
                        <span asp-validation-for="BrandId" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="form-check">
                        <input asp-for="IsFeatured" type="checkbox" class="form-check-input" />
                        <label asp-for="IsFeatured" class="form-check-label"></label>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const variantsContainer = document.getElementById('variants-container');
            let variantIndex = @((Model.Variants?.Count ?? 0));

            function addVariantRow() {
                const wrapper = document.createElement('div');
                wrapper.classList.add('border', 'rounded', 'p-3', 'mb-2');
                wrapper.innerHTML = `
<div class="row g-2 align-items-end">
  <div class="col-md-3">
    <label class="form-label">SKU</label>
    <input type="text" name="Variants[${variantIndex}].Sku" class="form-control" required />
  </div>
  <div class="col-md-2">
    <label class="form-label">قیمت</label>
    <input type="number" name="Variants[${variantIndex}].Price" class="form-control" min="1" step="0.01" required />
  </div>
  <div class="col-md-2">
    <label class="form-label">قیمت قدیم</label>
    <input type="number" name="Variants[${variantIndex}].OldPrice" class="form-control" step="0.01" />
  </div>
  <div class="col-md-2">
    <label class="form-label">موجودی</label>
    <input type="number" name="Variants[${variantIndex}].StockQuantity" class="form-control" min="0" />
  </div>
  <div class="col-md-3">
    <label class="form-label">مقادیر ویژگی‌ها</label>
    <select name="Variants[${variantIndex}].AttributeValueIds" multiple class="form-select">
      @if (Model.AttributeValueOptions != null)
      {
          foreach (var opt in Model.AttributeValueOptions)
          {
              <option value="@opt.Value">@opt.Text</option>
          }
      }
    </select>
  </div>
  <div class="col-12 text-end mt-2">
    <button type="button" class="btn btn-sm btn-outline-danger remove-variant-btn">حذف ورینت</button>
  </div>
</div>`;
                variantsContainer.appendChild(wrapper);
                variantIndex++;
            }

            document.getElementById('add-variant-btn').addEventListener('click', addVariantRow);
            variantsContainer.addEventListener('click', function (e) {
                if (e.target.classList.contains('remove-variant-btn')) {
                    e.target.closest('.border').remove();
                }
            });
        });
    </script>
}
