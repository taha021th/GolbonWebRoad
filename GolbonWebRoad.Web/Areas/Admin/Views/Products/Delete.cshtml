@model GolbonWebRoad.Web.Areas.Admin.Models.DeleteProductViewModel
@{
    ViewData["Title"] = "حذف محصول: " + Model.Name;
}

<div class="bg-white p-6 rounded-xl shadow-md">
    <h2 class="text-2xl font-bold text-red-600 mb-4">تأیید حذف محصول</h2>
    <p class="text-gray-700 mb-6">آیا از حذف محصول زیر اطمینان دارید؟ این عملیات غیرقابل بازگشت است.</p>

    <div class="border rounded-lg p-4 mb-6">
        <dl class="grid grid-cols-1 sm:grid-cols-3 gap-4">
            <div class="font-semibold">شناسه محصول:</div>
            <div class="sm:col-span-2 font-mono">@Model.Id</div>

            <div class="font-semibold">نام محصول:</div>
            <div class="sm:col-span-2">@Model.Name</div>

            <div class="font-semibold">قیمت:</div>
            <div class="sm:col-span-2">@Model.Price.ToString("N0") تومان</div>

            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <div class="font-semibold">تصویر:</div>
                <div class="sm:col-span-2">
                    <img src="@Model.ImageUrl" alt="تصویر محصول" class="w-24 h-24 object-cover rounded-md border" />
                </div>
            }
        </dl>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="flex justify-end gap-4">
            <a asp-action="Index" class="bg-gray-200 text-gray-800 font-bold py-2 px-6 rounded-lg hover:bg-gray-300 transition">انصراف</a>
            <button type="submit" class="bg-red-600 text-white font-bold py-2 px-6 rounded-lg hover:bg-red-700 transition">بله، حذف کن</button>
        </div>
    </form>
</div>