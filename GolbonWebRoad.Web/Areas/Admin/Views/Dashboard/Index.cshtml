@{
    ViewData["Title"] = "داشبورد";
}

<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0 text-gray-800">@ViewData["Title"]</h1>
</div>

<!-- Stat Cards Row -->
<div class="row g-4">
    <!-- Total Revenue Card -->
    <div class="col-md-6 col-xl-3">
        <div class="card shadow-sm h-100">
            <div class="card-body d-flex align-items-center">
                <div class="flex-shrink-0 bg-primary text-white rounded-3 p-3 me-3">
                    <i class="fas fa-dollar-sign fa-2x"></i>
                </div>
                <div class="flex-grow-1">
                    <h6 class="text-muted mb-1">مجموع فروش</h6>
                    <h4 class="mb-0">۱۲,۵۴۰,۰۰۰ تومان</h4>
                </div>
            </div>
        </div>
    </div>
    <!-- Total Orders Card -->
    <div class="col-md-6 col-xl-3">
        <div class="card shadow-sm h-100">
            <div class="card-body d-flex align-items-center">
                <div class="flex-shrink-0 bg-info text-white rounded-3 p-3 me-3">
                    <i class="fas fa-box fa-2x"></i>
                </div>
                <div class="flex-grow-1">
                    <h6 class="text-muted mb-1">تعداد سفارشات</h6>
                    <h4 class="mb-0">۳۵۲</h4>
                </div>
            </div>
        </div>
    </div>
    <!-- Total Customers Card -->
    <div class="col-md-6 col-xl-3">
        <div class="card shadow-sm h-100">
            <div class="card-body d-flex align-items-center">
                <div class="flex-shrink-0 bg-warning text-white rounded-3 p-3 me-3">
                    <i class="fas fa-users fa-2x"></i>
                </div>
                <div class="flex-grow-1">
                    <h6 class="text-muted mb-1">تعداد کاربران</h6>
                    <h4 class="mb-0">۱۲۸</h4>
                </div>
            </div>
        </div>
    </div>
    <!-- Total Products Card -->
    <div class="col-md-6 col-xl-3">
        <div class="card shadow-sm h-100">
            <div class="card-body d-flex align-items-center">
                <div class="flex-shrink-0 bg-danger text-white rounded-3 p-3 me-3">
                    <i class="fas fa-shopping-bag fa-2x"></i>
                </div>
                <div class="flex-grow-1">
                    <h6 class="text-muted mb-1">تعداد محصولات</h6>
                    <h4 class="mb-0">۷۴</h4>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Charts and Recent Orders Row -->
<div class="row g-4 mt-2">
    <!-- Sales Chart -->
    <div class="col-lg-8">
        <div class="card shadow-sm">
            <div class="card-header">
                <h5 class="card-title mb-0">نمودار فروش ۷ روز اخیر</h5>
            </div>
            <div class="card-body">
                <canvas id="salesChart" style="width: 100%; height: 300px;"></canvas>
            </div>
        </div>
    </div>
    <!-- Recent Orders -->
    <div class="col-lg-4">
        <div class="card shadow-sm h-100">
            <div class="card-header">
                <h5 class="card-title mb-0">آخرین سفارشات</h5>
            </div>
            <div class="card-body p-0">
                <div class="list-group list-group-flush">
                    <a href="#" class="list-group-item list-group-item-action">
                        <div class="d-flex w-100 justify-content-between">
                            <h6 class="mb-1">سفارش #1024</h6>
                            <small class="text-muted">۳ دقیقه پیش</small>
                        </div>
                        <p class="mb-1">علی رضایی</p>
                        <small>۲۵۰,۰۰۰ تومان</small>
                    </a>
                    <a href="#" class="list-group-item list-group-item-action">
                        <div class="d-flex w-100 justify-content-between">
                            <h6 class="mb-1">سفارش #1023</h6>
                            <small class="text-muted">۱ ساعت پیش</small>
                        </div>
                        <p class="mb-1">مریم محمدی</p>
                        <small>۱,۲۰۰,۰۰۰ تومان</small>
                    </a>
                    <a href="#" class="list-group-item list-group-item-action">
                        <div class="d-flex w-100 justify-content-between">
                            <h6 class="mb-1">سفارش #1022</h6>
                            <small class="text-muted">۵ ساعت پیش</small>
                        </div>
                        <p class="mb-1">رضا احمدی</p>
                        <small>۸۵,۰۰۰ تومان</small>
                    </a>
                    <a href="#" class="list-group-item list-group-item-action">
                        <div class="d-flex w-100 justify-content-between">
                            <h6 class="mb-1">سفارش #1021</h6>
                            <small class="text-muted">دیروز</small>
                        </div>
                        <p class="mb-1">سارا حسینی</p>
                        <small>۴۳۰,۰۰۰ تومان</small>
                    </a>
                </div>
            </div>
            <div class="card-footer text-center">
                <a asp-area="Admin" asp-controller="Orders" asp-action="Index" class="btn btn-outline-primary btn-sm">مشاهده همه سفارشات</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Chart.js CDN -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Sales Chart
            var ctx = document.getElementById('salesChart').getContext('2d');
            var salesChart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: ['شنبه', 'یکشنبه', 'دوشنبه', 'سه‌شنبه', 'چهارشنبه', 'پنج‌شنبه', 'جمعه'],
                    datasets: [{
                        label: 'فروش (تومان)',
                        data: [1200000, 1900000, 3000000, 5000000, 2300000, 3100000, 4500000],
                        backgroundColor: 'rgba(13, 110, 253, 0.1)',
                        borderColor: 'rgba(13, 110, 253, 1)',
                        borderWidth: 2,
                        fill: true,
                        tension: 0.4
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                callback: function (value, index, values) {
                                    return new Intl.NumberFormat('fa-IR').format(value);
                                }
                            }
                        }
                    },
                    plugins: {
                        tooltip: {
                            rtl: true,
                             callbacks: {
                                label: function (context) {
                                    let label = context.dataset.label || '';
                                    if (label) {
                                        label += ': ';
                                    }
                                    if (context.parsed.y !== null) {
                                        label += new Intl.NumberFormat('fa-IR', { style: 'currency', currency: 'IRR' }).format(context.parsed.y * 10);
                                    }
                                    return label;
                                }
                            }
                        }
                    }
                }
            });
        });
    </script>
}
