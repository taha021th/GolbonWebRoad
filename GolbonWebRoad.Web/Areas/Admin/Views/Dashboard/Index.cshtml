@model GolbonWebRoad.Web.Areas.Admin.Models.Dashboard.DashboardViewModel
@{
    ViewData["Title"] = "داشبورد";

    // هلپر فانکشن‌ها برای فرمت کردن اعداد و وضعیت‌ها
    string FormatNumber(int number)
    {
        return number.ToString("N0", System.Globalization.CultureInfo.CreateSpecificCulture("fa-IR"));
    }

    string FormatCurrency(decimal amount)
    {
        return amount.ToString("N0", System.Globalization.CultureInfo.CreateSpecificCulture("fa-IR")) + " تومان";
    }

    string GetStatusText(string status)
    {
        return status switch
        {
            "PaymentReceived" => "پرداخت دریافت شده",
            "Pending" => "در انتظار",
            "Shipped" => "ارسال شده",
            "Cancelled" => "لغو شده",
            _ => status
        };
    }

    string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "PaymentReceived" => "bg-success",
            "Pending" => "bg-warning text-dark",
            "Shipped" => "bg-info text-dark",
            "Cancelled" => "bg-danger",
            _ => "bg-secondary"
        };
    }
}

<!-- نمایش پیام‌های خطا یا موفقیت -->
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0 text-gray-800">@ViewData["Title"]</h1>
    <small class="text-muted">به‌روزرسانی شده در: @DateTime.Now.ToString("yyyy/MM/dd HH:mm")</small>
</div>

<!-- Stat Cards Row -->
<div class="row g-4">
    <!-- Total Revenue Card -->
    <div class="col-md-6 col-xl-3">
        <div class="card shadow-sm h-100">
            <div class="card-body d-flex align-items-center">
                <div class="flex-shrink-0 bg-primary text-white rounded-3 p-3 me-3">
                    <i class="fas fa-dollar-sign fa-2x"></i>
                </div>
                <div class="flex-grow-1">
                    <h6 class="text-muted mb-1">مجموع فروش</h6>
                    <h4 class="mb-0">@FormatCurrency(Model.TotalRevenue)</h4>
                </div>
            </div>
        </div>
    </div>
    <!-- Total Orders Card -->
    <div class="col-md-6 col-xl-3">
        <div class="card shadow-sm h-100">
            <div class="card-body d-flex align-items-center">
                <div class="flex-shrink-0 bg-info text-white rounded-3 p-3 me-3">
                    <i class="fas fa-box fa-2x"></i>
                </div>
                <div class="flex-grow-1">
                    <h6 class="text-muted mb-1">تعداد سفارشات</h6>
                    <h4 class="mb-0">@FormatNumber(Model.TotalOrders)</h4>
                </div>
            </div>
        </div>
    </div>
    <!-- Total Customers Card -->
    <div class="col-md-6 col-xl-3">
        <div class="card shadow-sm h-100">
            <div class="card-body d-flex align-items-center">
                <div class="flex-shrink-0 bg-warning text-white rounded-3 p-3 me-3">
                    <i class="fas fa-users fa-2x"></i>
                </div>
                <div class="flex-grow-1">
                    <h6 class="text-muted mb-1">تعداد کاربران</h6>
                    <h4 class="mb-0">@FormatNumber(Model.TotalUsers)</h4>
                </div>
            </div>
        </div>
    </div>
    <!-- Total Products Card -->
    <div class="col-md-6 col-xl-3">
        <div class="card shadow-sm h-100">
            <div class="card-body d-flex align-items-center">
                <div class="flex-shrink-0 bg-danger text-white rounded-3 p-3 me-3">
                    <i class="fas fa-shopping-bag fa-2x"></i>
                </div>
                <div class="flex-grow-1">
                    <h6 class="text-muted mb-1">تعداد محصولات</h6>
                    <h4 class="mb-0">@FormatNumber(Model.TotalProducts)</h4>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- ردیف دوم آمار -->
<div class="row g-4 mt-2">
    <!-- درآمد امروز -->
    <div class="col-md-6 col-xl-3">
        <div class="card shadow-sm h-100">
            <div class="card-body d-flex align-items-center">
                <div class="flex-shrink-0 bg-success text-white rounded-3 p-3 me-3">
                    <i class="fas fa-calendar-day fa-2x"></i>
                </div>
                <div class="flex-grow-1">
                    <h6 class="text-muted mb-1">درآمد امروز</h6>
                    <h4 class="mb-0">@FormatCurrency(Model.TodayRevenue)</h4>
                </div>
            </div>
        </div>
    </div>
    <!-- سفارشات امروز -->
    <div class="col-md-6 col-xl-3">
        <div class="card shadow-sm h-100">
            <div class="card-body d-flex align-items-center">
                <div class="flex-shrink-0 bg-primary text-white rounded-3 p-3 me-3">
                    <i class="fas fa-shopping-cart fa-2x"></i>
                </div>
                <div class="flex-grow-1">
                    <h6 class="text-muted mb-1">سفارشات امروز</h6>
                    <h4 class="mb-0">@FormatNumber(Model.TodayOrders)</h4>
                </div>
            </div>
        </div>
    </div>
    <!-- سفارشات در انتظار -->
    <div class="col-md-6 col-xl-3">
        <div class="card shadow-sm h-100">
            <div class="card-body d-flex align-items-center">
                <div class="flex-shrink-0 bg-warning text-white rounded-3 p-3 me-3">
                    <i class="fas fa-clock fa-2x"></i>
                </div>
                <div class="flex-grow-1">
                    <h6 class="text-muted mb-1">سفارشات در انتظار</h6>
                    <h4 class="mb-0">@FormatNumber(Model.PendingOrders)</h4>
                </div>
            </div>
        </div>
    </div>
    <!-- محصولات کم موجود -->
    <div class="col-md-6 col-xl-3">
        <div class="card shadow-sm h-100">
            <div class="card-body d-flex align-items-center">
                <div class="flex-shrink-0 bg-danger text-white rounded-3 p-3 me-3">
                    <i class="fas fa-exclamation-triangle fa-2x"></i>
                </div>
                <div class="flex-grow-1">
                    <h6 class="text-muted mb-1">محصولات کم موجود</h6>
                    <h4 class="mb-0">@FormatNumber(Model.LowStockProducts)</h4>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Charts and Recent Orders Row -->
<div class="row g-4 mt-2">
    <!-- Sales Chart -->
    <div class="col-lg-8">
        <div class="card shadow-sm">
            <div class="card-header">
                <h5 class="card-title mb-0">نمودار فروش ۷ روز اخیر</h5>
            </div>
            <div class="card-body">
                <canvas id="salesChart" style="width: 100%; height: 300px;"></canvas>
            </div>
        </div>
    </div>
    <!-- Recent Orders -->
    <div class="col-lg-4">
        <div class="card shadow-sm h-100">
            <div class="card-header">
                <h5 class="card-title mb-0">آخرین سفارشات</h5>
            </div>
            <div class="card-body p-0">
                @if (Model.RecentOrders != null && Model.RecentOrders.Any())
                {
                    <div class="list-group list-group-flush">
                        @foreach (var order in Model.RecentOrders)
                        {
                            <a asp-area="Admin" asp-controller="Orders" asp-action="Detail" asp-route-id="@order.Id" 
                               class="list-group-item list-group-item-action">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1">سفارش #@order.Id</h6>
                                    <small class="text-muted">@order.TimeAgo</small>
                                </div>
                                <div class="d-flex w-100 justify-content-between align-items-center">
                                    <p class="mb-1">@order.CustomerName</p>
                                    <span class="badge @GetStatusBadgeClass(order.OrderStatus) me-2">@GetStatusText(order.OrderStatus)</span>
                                </div>
                                <small>@FormatCurrency(order.TotalAmount)</small>
                            </a>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-4 text-muted">
                        <i class="fas fa-inbox fa-3x mb-3"></i>
                        <p>هیچ سفارشی یافت نشد</p>
                    </div>
                }
            </div>
            <div class="card-footer text-center">
                <a asp-area="Admin" asp-controller="Orders" asp-action="Index" class="btn btn-outline-primary btn-sm">مشاهده همه سفارشات</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Chart.js CDN -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Sales Chart
            var ctx = document.getElementById('salesChart').getContext('2d');
            var salesChart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: [@Html.Raw(string.Join(",", Model.DailySales.Select(d => $"'{d.DayName}'").ToArray()))],
                    datasets: [{
                        label: 'فروش (تومان)',
                        data: [@Html.Raw(string.Join(",", Model.DailySales.Select(d => d.Sales.ToString(System.Globalization.CultureInfo.InvariantCulture))))],
                        backgroundColor: 'rgba(13, 110, 253, 0.1)',
                        borderColor: 'rgba(13, 110, 253, 1)',
                        borderWidth: 2,
                        fill: true,
                        tension: 0.4
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                callback: function (value, index, values) {
                                    return new Intl.NumberFormat('fa-IR').format(value);
                                }
                            }
                        }
                    },
                    plugins: {
                        tooltip: {
                            rtl: true,
                             callbacks: {
                                label: function (context) {
                                    let label = context.dataset.label || '';
                                    if (label) {
                                        label += ': ';
                                    }
                                    if (context.parsed.y !== null) {
                                        label += new Intl.NumberFormat('fa-IR', { style: 'currency', currency: 'IRR' }).format(context.parsed.y * 10);
                                    }
                                    return label;
                                }
                            }
                        }
                    }
                }
            });
        });
    </script>
}
