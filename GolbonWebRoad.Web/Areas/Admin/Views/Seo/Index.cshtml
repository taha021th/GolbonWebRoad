@* این صفحه برای مدیریت تنظیمات فنی سئو است:
   - robots.txt: تعیین مسیرهای مجاز/غیرمجاز برای کرالرها
   - sitemap.xml: نقشه سایت برای معرفی URLها به موتورهای جستجو
   - قالب‌های پیش‌فرض Meta Title/Description و گزینه‌های canonical/noindex *@
@model GolbonWebRoad.Web.Services.Seo.SeoSettings
@{
    ViewData["Title"] = "تنظیمات سئو";
}

<div class="row">
    <div class="col-lg-8">
        <div class="card shadow-sm mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span>@ViewData["Title"]</span>
                <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="btn btn-sm btn-secondary">بازگشت</a>
            </div>
            <div class="card-body">
                <form asp-action="Index" method="post">
                    @Html.AntiForgeryToken()

                    @* robots.txt فایل متنی ساده در /robots.txt است که رفتار خزنده‌ها را هدایت می‌کند *@
                    <div class="mb-3">
                        <label class="form-label">robots.txt</label>
                        <textarea asp-for="RobotsTxt" class="form-control" rows="10" dir="ltr"></textarea>
                        <small class="text-muted d-block mt-1">در صورت فعال بودن Sitemap، آدرس آن به انتهای فایل اضافه می‌شود.</small>
                    </div>

                    <div class="form-check form-switch mb-3">
                        <input class="form-check-input" type="checkbox" asp-for="SitemapEnabled" id="SitemapEnabled">
                        <label class="form-check-label" for="SitemapEnabled">فعال‌سازی sitemap.xml</label>
                    </div>

                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">قالب پیش‌فرض Meta Title</label>
                            <input asp-for="DefaultMetaTitleTemplate" class="form-control" />
                            <small class="text-muted">از {name} برای نام موجودیت استفاده کنید.</small>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">قالب پیش‌فرض Meta Description</label>
                            <input asp-for="DefaultMetaDescriptionTemplate" class="form-control" />
                        </div>
                    </div>

                    <div class="form-check form-switch mt-3">
                        <input class="form-check-input" type="checkbox" asp-for="AutoCanonicalEnabled" id="AutoCanonicalEnabled">
                        <label class="form-check-label" for="AutoCanonicalEnabled">تولید خودکار canonical</label>
                    </div>
                    <div class="form-check form-switch mt-2">
                        <input class="form-check-input" type="checkbox" asp-for="NoindexOnFilteredLists" id="NoindexOnFilteredLists">
                        <label class="form-check-label" for="NoindexOnFilteredLists">noindex برای لیست‌های فیلتر شده</label>
                    </div>

                    <div class="d-flex justify-content-end mt-4">
                        <button type="submit" class="btn btn-primary">ذخیره</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="card shadow-sm">
            <div class="card-header">راهنما</div>
            <div class="card-body">
                <ul>
                    <li>برای جلوگیری از ایندکس صفحات تست، از Disallow در robots.txt استفاده کنید.</li>
                    <li>برای محصولاتی که Meta خالی دارند، قالب‌های پیش‌فرض اعمال می‌شود.</li>
                </ul>
            </div>
        </div>
    </div>
</div>
