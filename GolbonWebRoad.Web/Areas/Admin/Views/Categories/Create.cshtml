@model GolbonWebRoad.Web.Areas.Admin.Models.Categories.CreateCategoryViewModel
@{
    ViewData["Title"] = "افزودن دسته‌بندی جدید";
}

<div class="bg-white p-6 rounded-xl shadow-md">
    <h2 class="text-2xl font-bold mb-6 border-b pb-4">فرم دسته‌بندی جدید</h2>
    <form asp-action="Create" method="post">
        <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4"></div>
        <div class="mb-4">
            <label asp-for="Name" class="block font-semibold text-gray-700 mb-2">نام دسته بندی</label>
            <input asp-for="Name" class="w-full p-3 border border-gray-300 rounded-md" />
            <span asp-validation-for="Name" class="text-red-500 text-sm mt-1"></span>
        </div>
        <div class="mb-4">
            <label asp-for="Slog" class="block font-semibold text-gray-700 mb-2">Slog</label>
            <input asp-for="Slog" class="w-full p-3 border border-gray-300 rounded-md" />
            <span asp-validation-for="Slog" class="text-red-500 text-sm mt-1"></span>
        </div>
        <div class="mt-8 flex justify-end gap-4">
            <a asp-action="Index" class="bg-gray-200 text-gray-800 font-bold py-2 px-6 rounded-lg">انصراف</a>
            <button type="submit" class="bg-indigo-600 text-white font-bold py-2 px-6 rounded-lg">ذخیره</button>
        </div>
    </form>
</div>