@model GolbonWebRoad.Application.Dtos.Categories.CategoryDto
@{
    ViewData["Title"] = "حذف دسته‌بندی";
}

<div class="bg-white p-6 rounded-xl shadow-md max-w-lg mx-auto">
    <h2 class="text-2xl font-bold mb-4 text-red-600">تأیید حذف</h2>
    <p class="text-gray-700 mb-6">
        آیا از حذف دسته‌بندی زیر مطمئن هستید؟ این عملیات غیرقابل بازگشت است.
    </p>

    <div class="border rounded-lg p-4 mb-6 space-y-2 bg-gray-50">
        <div>
            <span class="font-semibold">شناسه:</span>
            <span class="font-mono">@Model.Id</span>
        </div>
        <div>
            <span class="font-semibold">نام دسته‌بندی:</span>
            <span>@Model.Name</span>
        </div>
        <div>
            <span class="font-semibold">Slog:</span>
            <span>@Model.Slog</span>
        </div>
    </div>

    <form asp-action="Delete" method="post">
        @* فیلد مخفی برای ارسال شناسه به اکشن DeleteConfirmed *@
        <input type="hidden" asp-for="Id" />

        <div class="flex justify-end gap-4">
            <a asp-action="Index" class="bg-gray-200 text-gray-800 font-bold py-2 px-6 rounded-lg hover:bg-gray-300 transition">
                انصراف
            </a>
            <button type="submit" class="bg-gray-200 text-gray-800 font-bold py-2 px-6 rounded-lg hover:bg-gray-300 transition">
                بله، حذف کن
            </button>
        </div>
    </form>
</div>