@model GolbonWebRoad.Web.Areas.Admin.Models.Categories.EditCategoryViewModel
@{
    ViewData["Title"] = "ویرایش دسته‌بندی: " + Model.Name;
}

<div class="bg-white p-6 rounded-xl shadow-md">
    <h2 class="text-2xl font-bold mb-6 border-b pb-4">ویرایش دسته‌بندی</h2>

    <form asp-action="Edit" method="post">
        <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4"></div>

        @* فیلد مخفی برای ارسال شناسه دسته‌بندی *@
        <input type="hidden" asp-for="Id" />

        <div class="mb-4">
            <label asp-for="Name" class="block font-semibold text-gray-700 mb-2">نام دسته‌بندی</label>
            <input asp-for="Name" class="w-full p-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-indigo-300 outline-none transition" />
            <span asp-validation-for="Name" class="text-red-500 text-sm mt-1"></span>
        </div>

        <div class="mt-8 flex justify-end gap-4">
            <a asp-action="Index" class="bg-gray-200 text-gray-800 font-bold py-2 px-6 rounded-lg hover:bg-gray-300 transition">انصراف</a>
            <button type="submit" class="bg-indigo-600 text-white font-bold py-2 px-6 rounded-lg hover:bg-indigo-700 transition">به‌روزرسانی</button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}