@model IEnumerable<GolbonWebRoad.Application.Dtos.Categories.CategoryDto>
@{
    ViewData["Title"] = "مدیریت دسته‌بندی‌ها";
}

<div class="bg-white p-6 rounded-xl shadow-md">
    <div class="flex justify-between items-center mb-6">
        <h2 class="text-2xl font-bold">لیست دسته‌بندی‌ها</h2>
        <a asp-action="Create" class="bg-indigo-600 text-white font-bold py-2 px-4 rounded-lg hover:bg-indigo-500 transition">
            + افزودن دسته‌بندی جدید
        </a>
    </div>
    <table class="w-full text-sm text-right">
        <thead class="bg-gray-50">
            <tr>
                <th class="p-3">شناسه</th>
                <th class="p-3">نام دسته‌بندی</th>
                <th class="p-3"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr class="border-b hover:bg-gray-50">
                    <td class="p-3 font-mono">@category.Id</td>
                    <td class="p-3 font-semibold">@category.Name</td>
                    <td class="p-3 flex gap-4 justify-end">
                        <a asp-action="Edit" asp-route-id="@category.Id" class="text-blue-600 hover:underline">ویرایش</a>
                        <a asp-action="Delete" asp-route-id="@category.Id" class="text-red-600 hover:underline">حذف</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>