@model IEnumerable<GolbonWebRoad.Domain.Entities.Category>
@{
    ViewData["Title"] = "مدیریت دسته‌بندی‌ها";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0 text-gray-800">@ViewData["Title"]</h1>
</div>

<div class="row g-4">
    <!-- Add/Edit Category Form -->
    <div class="col-lg-5">
        <div class="card shadow-sm">
            <div class="card-header">
                افزودن دسته‌بندی جدید
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="mb-3">
                        <label for="Name" class="form-label">نام دسته‌بندی</label>
                        <input name="Name" id="Name" class="form-control" required />
                        <span name="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label for="Slog" class="form-label">اسلاگ (آدرس)</label>
                        <input name="Slog" id="Slog" class="form-control" required />
                        <span name="Slog" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label for="Image" class="form-label">تصویر دسته‌بندی</label>
                        <input name="Image" id="Image" type="file" class="form-control" accept="image/*" />
                    </div>

                    <div class="text-end">
                        <button type="submit" class="btn btn-primary">ذخیره دسته‌بندی</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Categories List -->
    <div class="col-lg-7">
        <div class="card shadow-sm">
            <div class="card-header">
                لیست دسته‌بندی‌ها
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-striped table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="py-3 px-4">تصویر</th>
                                <th class="py-3 px-4">نام دسته‌بندی</th>
                                <th class="py-3 px-4">اسلاگ</th>
                                <th class="py-3 px-4 text-center">عملیات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="align-middle px-4">
                                            <img src="@(string.IsNullOrEmpty(item.ImageUrl) ? "https://placehold.co/100x100/EFEFEF/AAAAAA&text=No+Image" : item.ImageUrl)"
                                                 alt="@item.Name"
                                                 class="rounded" style="width: 50px; height: 50px; object-fit: cover;" />
                                        </td>
                                        <td class="align-middle px-4">@item.Name</td>
                                        <td class="align-middle px-4">@item.Slog</td>
                                        <td class="align-middle text-center px-4">
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">
                                                <i class="fas fa-pen"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="4" class="text-center py-4 text-muted">هیچ دسته‌بندی یافت نشد.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
