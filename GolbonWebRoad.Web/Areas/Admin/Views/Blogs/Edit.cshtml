@model GolbonWebRoad.Web.Areas.Admin.Models.Blogs.EditBlogViewModel

@{
    ViewData["Title"] = "ویرایش مقاله: " + Model.Title;
}

<form asp-area="Admin" asp-controller="Blogs" asp-action="Update" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="MainImageUrl" />

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">ویرایش مقاله: @Model.Title</h1>
        <div>
            <a asp-action="Index" class="btn btn-outline-secondary me-2">بازگشت</a>
            <button type="submit" class="btn btn-primary">ذخیره تغییرات</button>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            @* بخش محتوا *@
            <div class="card shadow-sm mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">محتوای اصلی</h6>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label asp-for="Title" class="form-label">عنوان مقاله</label>
                        <input asp-for="Title" class="form-control" required />
                    </div>

                    <div class="mb-3">
                        <label asp-for="ShortDescription" class="form-label">توضیح کوتاه</label>
                        <textarea asp-for="ShortDescription" class="form-control" rows="3"></textarea>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Content" class="form-label">متن اصلی</label>
                        <textarea asp-for="Content" id="editor" class="form-control">@Model.Content</textarea>
                    </div>
                </div>
            </div>

            @* بخش سئو *@
            <div class="card shadow-sm mb-4">
                <div class="card-header py-3 bg-light">
                    <h6 class="m-0 font-weight-bold text-dark">تنظیمات سئو (SEO)</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Slog" class="form-label">نامک (Slug)</label>
                            <input asp-for="Slog" class="form-control" placeholder="example-post-url" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="H1Title" class="form-label">عنوان H1 اختصاصی</label>
                            <input asp-for="H1Title" class="form-control" />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="MetaKeywords" class="form-label">کلمات کلیدی (با کاما جدا کنید)</label>
                        <input asp-for="MetaKeywords" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="MetaDescription" class="form-label">توضیحات متا</label>
                        <textarea asp-for="MetaDescription" class="form-control" rows="2"></textarea>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="CanonicalUrl" class="form-label">آدرس Canonical</label>
                            <input asp-for="CanonicalUrl" class="form-control" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="MetaRobots" class="form-label">Meta Robots</label>
                            <input asp-for="MetaRobots" class="form-control" placeholder="index, follow" />
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            @* تصویر و تنظیمات جانبی *@
            <div class="card shadow-sm mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">تنظیمات انتشار</h6>
                </div>
                <div class="card-body">
                    <div class="mb-3 text-center">
                        <label class="form-label d-block text-start">تصویر شاخص</label>
                        <img src="@(string.IsNullOrEmpty(Model.MainImageUrl) ? "/images/no-image.png" : Model.MainImageUrl)"
                             class="img-fluid rounded mb-2" style="max-height: 200px; width: 100%; object-fit: cover;" />
                        <input type="file" asp-for="Image" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="MainImageAltText" class="form-label">Alt متن تصویر</label>
                        <input asp-for="MainImageAltText" class="form-control" placeholder="توضیح تصویر برای سئو" />
                    </div>

                    <hr />

                    <div class="mb-3">
                        <label asp-for="CategoryId" class="form-label">دسته‌بندی</label>
                        <select asp-for="CategoryId" class="form-select"
                                asp-items="@(new SelectList(Model.BlogCategoryListItemViewModels, "Id", "Name"))">
                        </select>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ReadTimeMinutes" class="form-label">زمان مطالعه (دقیقه)</label>
                        <input asp-for="ReadTimeMinutes" type="number" class="form-control" />
                    </div>

                    <div class="form-check form-switch mb-3">
                        <input asp-for="IsPublished" class="form-check-input" type="checkbox">
                        <label asp-for="IsPublished" class="form-check-label">وضعیت انتشار (فعال/غیرفعال)</label>
                    </div>

                    <div class="form-check form-switch mb-3">
                        <input asp-for="IsShowHomePage" class="form-check-input" type="checkbox">
                        <label asp-for="IsShowHomePage" class="form-check-label">نمایش در صفحه اصلی</label>
                    </div>

                    
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <script src="https://cdn.ckeditor.com/4.22.1/standard/ckeditor.js"></script>
    <script>
        CKEDITOR.replace('editor', {
            language: 'fa', // تنظیم زبان به فارسی اگر فایل زبان موجود باشد
            contentsLangDirection: 'rtl'
        });
    </script>
}