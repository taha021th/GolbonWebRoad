@model IEnumerable<GolbonWebRoad.Web.Areas.Admin.Models.Faqs.FaqViewModel>
@{
    ViewData["Title"] = "سوالات متداول";
}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0 text-gray-800">@ViewData["Title"]</h1>
    <a asp-action="Create" class="btn btn-primary">افزودن سوال</a>
</div>
<div class="card shadow-sm">
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>#</th>
                    <th>سوال</th>
                    <th>دسته</th>
                    <th>ترتیب</th>
                    <th>وضعیت</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Question</td>
                        <td>@item.CategoryName</td>
                        <td>@item.SortOrder</td>
                        <td>@(item.IsActive ? "فعال" : "غیرفعال")</td>
                        <td class="text-end">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">ویرایش</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">حذف</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr><td colspan="6" class="text-center text-muted">موردی یافت نشد</td></tr>
            }
            </tbody>
        </table>
    </div>
</div>