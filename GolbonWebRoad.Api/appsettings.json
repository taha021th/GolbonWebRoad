{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Information",
      "Microsoft.EntityFrameworkCore.Database.Connection": "Information"
    }
  },
  "ConnectionStrings": {
    "PostgresConnection": "Server=localhost;Port=5432;Database=GolbonWebRoadDb;User Id=postgres;Password=Golbon$021;"
  },
  "Jwt": {
    "Issuer": "https://localhost:7002/",
    "Audience": "https://localhost:7002/",
    "Key": "a-very-long-and-super-secret-key-for-jwt-token-generation-123456789"
